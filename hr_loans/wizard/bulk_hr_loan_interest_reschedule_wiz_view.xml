<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_bulk_hr_loan_interest_reschedule_wiz" model="ir.ui.view">
            <field name="name">bulk.hr.loan.interest.reschedule.wiz.view</field>
            <field name="model">bulk.hr.loan.interest.reschedule.wiz</field>
            <field name="arch" type="xml">
                <form string="Bulk Interest Reschedule">
                    <group>
                        <group>
                            <field name="loan_id" required="1" options="{'no_quick_create':True,'no_create_edit':True,'no_create':True}"/>
                            <field name="old_interest_rate"/>
                            <field name="new_interest_rate"/>
                        </group>
                        <group>
                            <field name="date" required="1" readonly="1"/>
                            <field name="next_installment_start_date" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Employee Loan Detail" name="employee_loans">
                            <field name="employee_loan_ids"/>
                        </page>
                    </notebook>
                    <footer>
                        <button name="action_interest_reschedule" string="Reschedule Interest Rate" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-primary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_bulk_hr_loan_interest_reschedule_wiz" model="ir.actions.act_window">
            <field name="name">Bulk Interest ReSchedule</field>
            <field name="res_model">bulk.hr.loan.interest.reschedule.wiz</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
                id="menu_bulk_hr_loan_interest_reschedule"
                name="Bulk Interest ReSchedule"
                action="action_bulk_hr_loan_interest_reschedule_wiz"
                parent="hr_loans.menu_hr_loan_main_menu"
                sequence="100"
                groups="hr.group_hr_manager,hr_payroll.group_hr_payroll_manager"/>

    </data>
</odoo>
