<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_calc_guarantor_gratuity_wiz" model="ir.ui.view">
            <field name="name">calc.guarantor.gratuity.wiz.view</field>
            <field name="model">calc.guarantor.gratuity.wiz</field>
            <field name="arch" type="xml">
                <form string="Guarantor Gratuity Calculation">
                    <sheet>
                        <group>
                            <group>
                                <field name="guarantor_id" readonly="1"/>
                                <field name="employee_id" readonly="1"/>
                                <field name="joining_date" required="1"/>
                            </group>
                            <group>
                                <field name="guarantee_date" required="1"/>
                                <field name="gratuity_type" required="1"/>
                                <field name="is_death_case"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button class="btn-primary" name="action_calc_gratuity" string="Calc Gratuity" type="object"/>
                        <button class="btn-default" special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_calc_guarantor_gratuity_wiz" model="ir.actions.act_window">
            <field name="name">Calc Guarantor Gratuity</field>
            <field name="res_model">calc.guarantor.gratuity.wiz</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
