<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Loans Reference in the Employee Profile -->
        <record id="view_employee_form_loan" model="ir.ui.view">
            <field name="name">hr.employee.form.loan</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//notebook" position="inside">
                        <page string="Loan Information">
                            <group>
                                <group colspan="4" col="4">
                                    <field name="loan_ids" nolabel="1" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="hr_loans_tree_view" model="ir.ui.view">
            <field name="name">hr.loans.tree</field>
            <field name="model">hr.loans</field>
            <field name="arch" type="xml">
                <tree string="Loan Rules" decoration-primary="state == 'draft'" decoration-success="state == 'lock'">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="company_id" groups="base.group_multi_company" widget="selection"/>
                    <field name="amount_max"/>
                    <field name="amount_percentage"/>
                    <field name="interest_rate"/>
                    <field name="apply_on_remaining_service"/>
                    <field name="salary_rule_id"/>
                    <field name="interest_salary_rule_id"/>
                    <field name="state" widget="badge" decoration-primary="state == 'draft'" decoration-success="state == 'lock'"/>
                </tree>
            </field>
        </record>

        <record id="hr_loans_form_view" model="ir.ui.view">
            <field name="name">hr.loans.form</field>
            <field name="model">hr.loans</field>
            <field name="arch" type="xml">
                <form string="Loan Rules">
                    <header>
                        <button name="action_lock" type="object" class="oe_highlight" string="Lock" states="draft"/>
                        <button name="action_unlock" type="object" class="oe_highlight" string="UnLock" states="lock"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>
                            <group>
                                <field name="code" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>
                        </group>

                        <group col="4">
                            <field name="active" invisible="1"/>
                            <field name="company_id" widget="selection" groups="base.group_multi_company"/>
                        </group>

                        <separator colspan="4"/>
                        <group col="4">
                            <field name="amount_max" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="journal_id" attrs="{'readonly':[('state','!=','draft')]}"
                                   options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                            <field name="shares_max" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="salary_rule_id" attrs="{'readonly':[('state','!=','draft')]}"
                                   domain="[('category_id.code', '=', 'DED')]" options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                            <field name="amount_percentage" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="interest_salary_rule_id" attrs="{'readonly':[('state','!=','draft')]}"
                                   domain="[('category_id.code', '=', 'DED')]" options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                            <field name="apply_on_remaining_service" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="interest_rate" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group string="Description">
                            <field name="note" nolabel="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <notebook>
                            <page name="loan_eligibility" string="Eligibility Criteria">
                                <field name="eligibility_ids" attrs="{'readonly':[('state','!=','draft')]}">
                                    <tree>
                                        <field name="name"/>
                                        <field name="domain"/>
                                        <field name="period" string="After Month"/>
                                        <field name="loan_rule_id" invisible="1"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="name" required="1"/>
                                                <field name="code"/>
                                            </group>
                                            <group>
                                                <field name="period" required="1"/>
                                            </group>
                                        </group>
                                        <field name="domain" placeholder="Domain" widget="domain" options="{'model': 'hr.employee', 'in_dialog': true}"/>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_loans_action_view" model="ir.actions.act_window">
            <field name="name">Loan Rules</field>
            <field name="res_model">hr.loans</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                name="Loan Rules"
                id="menu_action_hr_loans"
                action="hr_loans_action_view"
                parent="hr_loans.menu_hr_loan_main_menu"
                sequence="10"
                groups="hr.group_hr_manager,hr_payroll.group_hr_payroll_manager"/>
    </data>
</odoo>

