                     <!-- /.box-header -->
                     <div class="box-body">
                         <div class="row">
                             <div class="col-md-12">
                                 <div class="table-responsive">
                                     <table class="table table-hover">
                                         <tr>
                                             <th>Invoice</th>
                                             <th>Date From</th>
                                             <th>Date To</th>
                                             <th>Action</th>
