<odoo>
    <template id="ess_portal_family" name="Employee Portal Profile">
        <t t-call="web.layout">
            <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
            <t t-set="head">
                <link rel="icon" href="/ess_portal/static/logo/favicon.ico"/>
        		<link href="/ess_portal_assets/static/src/css/vendors_css.css" rel="stylesheet" media="all"/>
        		<link href="/ess_portal_assets/static/src/css/style.css" rel="stylesheet" media="all"/>
        		<link href="/ess_portal_assets/static/src/css/skin_color.css" rel="stylesheet" media="all"/>
				<style>
					.logo_img {
						max-width: 64% !important;
					}
					.main-header > div .logo {
						line-height: normal;
						height: auto;
						background: #112c4f !important;
					}
					@media (max-width: 767px)
					.main-header > div .logo {
						line-height: normal;
						height: auto;
						background: #112c4f !important;
					}
				</style>
            </t>

			<body class="hold-transition light-skin sidebar-mini theme-primary fixed">
				<div class="wrapper">
					<div id="loader"/>

  					<t t-call="ess_portal.ess_header_menu"/>
					<t t-call="ess_portal.ess_side_menu"/>

					<!-- Content Wrapper. Contains page content -->
					<div class="content-wrapper">
					  <div class="container-full">
						<!-- Content Header (Page header) -->
						<div class="content-header">
							<div class="d-flex align-items-center">
								<div class="me-auto">
									<h4 class="page-title">Profile</h4>
									<div class="d-inline-block align-items-center">
										<nav>
											<ol class="breadcrumb">
												<li class="breadcrumb-item"><a href="#"><i class="mdi mdi-home-outline"/></a></li>
												<!--<li class="breadcrumb-item" aria-current="page">Extra</li>-->
												<li class="breadcrumb-item active" aria-current="page">Profile</li>
											</ol>
										</nav>
									</div>
								</div>

							</div>
						</div>

						<!-- Main content -->
						<section class="content">
							<div class="row">
								<div class="col-lg-4 col-sm-12">
								  <a href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#new_family_member" class="btn btn-success mt-10 d-block text-center mb-2">+ New Member</a>
							  	</div>
								<div id="new_family_member" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="new_family_member" aria-hidden="true">

									<div class="modal-dialog">
							<form class="form-horizontal" id="form_family_member">
							<div class="modal-content">
								<div class="modal-header">
									<h4 class="modal-title" id="myModalLabel">Add New Family Record</h4>
									<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
								</div>
								<div class="modal-body">
										<div class="row">
													<div class="col-md-6">
													<div class="form-group">
													  <label class="form-label">Relation</label>
														<div class="controls">
													  <select class="form-select" name="member_relationship" required="">
														<option value="">Select</option>
														<option value="Father">Father</option>
														<option value="Mother">Mother</option>
														<option value="Wife">Wife</option>
														<option value="Husband">Husband</option>
														<option value="Son">Son</option>
														<option value="Daughter">Daughter</option>
													  </select>
														</div>
													</div>
												  </div>
											<div class="col-md-6">
													<div class="form-group">
													  <label class="form-label">Living Status</label>
														<div class="controls">
													  <select name="member_status" class="form-select" required="">
														<option value="">Select</option>
														<option value="Alive">Alive</option>
														<option value="Died">Died</option>
														<option value="Divorced">Divorced</option>
														<option value="Married">Married</option>
													  </select>
														</div>
													</div>
												  </div>
												  <div class="col-md-6">
													<div class="form-group">
													  <label class="form-label">Name</label>
														<div class="controls">
													  <input name="member_name" type="text"  class="form-control" placeholder="" required=""/>
														</div>
													</div>
												  </div>
											<div class="col-md-6">
													<div class="form-group">
													  <label class="form-label">CNIC/B.Form</label>
														<div class="controls">
													  <input name="member_cnic" type="text"  class="form-control" placeholder="Enter Without Dashes" required=""/>
														</div>
														</div>
												  </div><div class="col-md-6">
													<div class="form-group">
													  <label class="form-label">Date of Birth</label>
														<div class="controls">
													  <input name="member_dob" type="date"   class="form-control" placeholder="" required=""/>
														</div>
													</div>
												  </div>
											<div class="col-md-6">
													<div class="form-group">
													  <label class="form-label">Contact Number</label>
													  <input name="member_contact" type="text"  class="form-control" placeholder=""/>
													</div>
												  </div>

												</div>

								</div>
								<div class="modal-footer">
									<button type="submit" class="btn btn-success" >Add</button>
									<button type="button" class="btn btn-danger float-end" data-bs-dismiss="modal">Cancel</button>
								</div>
							</div>
							<!-- /.modal-content -->
							 </form>
						</div>

								</div>
							</div>
						  	<div class="row">
							  <t t-foreach="family_ids" t-as="rec">
								  <div class="col-lg-4">
									<div class="box">
										<div class="box-body ribbon-box">
											<form class="form">
											<div class="ribbon ribbon-success">
												<span t-if="rec.relationship" t-esc="dict(rec.fields_get(allfields=['relationship'])['relationship']['selection'])[rec.relationship]"/>
											 - <span  t-esc="rec.age"/> Yrs
											</div>
											<div class="row">
												  <div class="col-md-12">
													<div class="form-group">
													  <input type="text" readonly="true" t-att-value="rec.name" class="form-control" placeholder="Full Name"/>
													</div>
												  </div>
												</div>
											<div class="row">
												  <div class="col-md-12">
													<div class="form-group">
													  <label class="form-label">Date of Birth</label>
													  <input type="date" readonly="true" t-att-value="rec.birthday" class="form-control" placeholder="Date of Birth"/>
													</div>
												  </div>
												</div>
											<div class="row">
												  <div class="col-md-12">
													<div class="form-group">
													  <label class="form-label">CNIC</label>
													  <input type="text" readonly="true" t-att-value="rec.cnic" class="form-control" placeholder="CNIC"/>
													</div>
												  </div>
												</div>
											<div class="row">
												  <div class="col-md-12">
													<div class="form-group">
													  <label class="form-label">Contact No.</label>
													  <input type="text" readonly="true" t-att-value="rec.phone_no" class="form-control" placeholder="CNIC"/>
													</div>
												  </div>
												</div>

											<!-- /.box-body -->
											<div class="box-footer">
												<!--<button type="button" class="btn btn-warning me-1">
												  <i class="ti-trash"></i> Cancel
												</button>-->
												<!--<button type="submit" class="btn btn-warning">
												  <i class="ti-save-alt"></i> Save
												</button>-->
											   <!-- <button type="submit" class="btn btn-warning">
												  <i class="ti-close"></i> Remove
												</button>-->
											</div>
										</form>



										</div> <!-- end box-body-->
									</div>
								</div>
							  </t>

							</div>
						  <!-- /.row -->

						</section>
						<!-- /.content -->
					  </div>
					</div>
					<!-- /.content-wrapper -->

					<footer class="main-footer">
					  &amp;copy; <script>document.write(new Date().getFullYear())</script> <a href="#">AARSOL</a>. All Rights Reserved.
					</footer>
    				<t t-call="ess_portal.ess_quick_action"/>
					<t t-call="ess_portal.ess_right_menu"/>
				</div>
                <t t-call-assets="ess_portal_assets.ess_assets" t-css="false"/>
				<script src="/ess_portal/static/js/family.js"/>
            </body>
        </t>
    </template>
</odoo>