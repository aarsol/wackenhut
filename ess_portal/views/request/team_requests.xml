	<template id="ess_portal_team_request" name="Employee Portal Leave">
		<t t-call="web.layout">
			<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
			<t t-set="head">
				<!-- <t t-call-assets="ess_portal_assets.ess_assets" t-js="false"/>-->
				<link rel="icon" href="/ess_portal/static/logo/favicon.ico"/>
				<link href="/ess_portal_assets/static/src/css/vendors_css.css" rel="stylesheet" media="all"/>
				<link href="/ess_portal_assets/static/src/css/style.css" rel="stylesheet" media="all"/>
				<link href="/ess_portal_assets/static/src/css/skin_color.css" rel="stylesheet" media="all"/>
				<style>
					.logo_img {
						max-width: 64% !important;
					}
					.main-header > div .logo {
						line-height: normal;
						height: auto;
						background: #112c4f !important;
					}
					@media (max-width: 767px)
					.main-header > div .logo {
						line-height: normal;
						height: auto;
						background: #112c4f !important;
					}
				</style>
				 <!--<title>ESS Profile</title>-->
			</t>
			<body class="hold-transition light-skin sidebar-mini theme-primary fixed">
				<div class="wrapper">
					<div id="loader"/>
					<t t-call="ess_portal.ess_header_menu"/>
					<t t-call="ess_portal.ess_side_menu"/>

					<div class="content-wrapper">
						<div class="container-full">
							<div class="content-header">
								<div class="d-flex align-items-center">
									<div class="me-auto">
										<h4 class="page-title">Request</h4>
										<div class="d-inline-block align-items-center">
											<nav>
												<ol class="breadcrumb">
													<li class="breadcrumb-item"><a href="#"><i class="mdi mdi-home-outline"/></a></li>
													<!--<li class="breadcrumb-item" aria-current="page">Extra</li>-->
													<li class="breadcrumb-item active" aria-current="page">Team Requests</li>
												</ol>
											</nav>
										</div>
									</div>
								</div>
							</div>
							<section class="content">
								<div class="row">
									<div class="col-12">
										<div class="box">
											<div class="box-header with-border">
											  <h4 class="box-title">Pending Tasks</h4>
											</div>
											<div class="nav nav-pills mb10">
												<ul class="nav nav-tabs tabs-vertical" role="tablist">
													<li class="nav-item"> <a class="nav-link active" data-bs-toggle="tab" href="#regular_leave" role="tab" aria-expanded="true" aria-selected="true"><span class="hidden-sm-up"/> <span class="hidden-xs-down">Regular Leaves</span> </a> </li>
													<li class="nav-item"> <a class="nav-link" data-bs-toggle="tab" href="#special_leave" role="tab" aria-expanded="false" aria-selected="false"><span class="hidden-sm-up"/> <span class="hidden-xs-down">Special Leaves</span></a> </li>
													<li class="nav-item"> <a class="nav-link" data-bs-toggle="tab" href="#missing_att" role="tab" aria-expanded="false" aria-selected="false"><span class="hidden-sm-up"/> <span class="hidden-xs-down">Missing Attendance</span></a> </li>
													<li class="nav-item"> <a class="nav-link" data-bs-toggle="tab" href="#loan_request" role="tab" aria-expanded="false" aria-selected="false"><span class="hidden-sm-up"/> <span class="hidden-xs-down">Advance Payments</span></a> </li>
													<li class="nav-item"> <a class="nav-link" data-bs-toggle="tab" href="#travel_request" role="tab" aria-expanded="false" aria-selected="false"><span class="hidden-sm-up"/> <span class="hidden-xs-down">Travel Requests</span></a> </li>
													<li class="nav-item"> <a class="nav-link" data-bs-toggle="tab" href="#resign_request" role="tab" aria-expanded="false" aria-selected="false"><span class="hidden-sm-up"/> <span class="hidden-xs-down">Resign Requests</span></a> </li>
												</ul>
												<div class="tab-content">
													<div class="tab-pane active" id="regular_leave" role="tabpanel" aria-expanded="true">
														<t t-foreach="leave_progress" t-as="leave">
															<t t-call="ess_portal.pending_team_leave_request"/>
														</t>
														<t t-if="not len(leave_progress) > 0">
															<t t-call="ess_portal.no_task">
																<t t-set="msg">Leaves</t>
															</t>
														</t>
													</div>
													<div class="tab-pane" id="special_leave" role="tabpanel" aria-expanded="false">
														<t t-foreach="special_progress" t-as="leave">
															<t t-call="ess_portal.pending_team_leave_request"/>
														</t>
														<t t-if="not len(special_progress) > 0">
															<t t-call="ess_portal.no_task">
																<t t-set="msg">Special Leaves</t>
															</t>
														</t>
													</div>
													<div class="tab-pane" id="missing_att" role="tabpanel" aria-expanded="false">
														<t t-foreach="missed_att_progress" t-as="rec">
															<t t-call="ess_portal.pending_missing_att_request"/>
														</t>
														<t t-if="not len(missed_att_progress) > 0">
															<t t-call="ess_portal.no_task">
																<t t-set="msg">Missing Attendance</t>
															</t>
														</t>
													</div>
													<div class="tab-pane" id="loan_request" role="tabpanel" aria-expanded="false">
														<t t-foreach="loan_progress" t-as="rec">
															<t t-call="ess_portal.pending_team_loan_request"/>
														</t>
														<t t-if="not len(loan_progress) > 0">
															<t t-call="ess_portal.no_task">
																<t t-set="msg">Advance Payment</t>
															</t>
														</t>
													</div>
													<div class="tab-pane" id="travel_request" role="tabpanel" aria-expanded="false">
														<t t-foreach="travel_progress" t-as="rec">
															<t t-call="ess_portal.pending_team_travel_request"/>
														</t>
														<t t-if="not len(travel_progress) > 0">
															<t t-call="ess_portal.no_task">
																<t t-set="msg">Travel Request</t>
															</t>
														</t>
													</div>
													<div class="tab-pane" id="resign_request" role="tabpanel" aria-expanded="false">
														<t t-foreach="resign_progress" t-as="rec">
															<t t-call="ess_portal.pending_team_resign_request"/>
														</t>
														<t t-if="not len(resign_progress) > 0">
															<t t-call="ess_portal.no_task">
																<t t-set="msg">Resign</t>
															</t>
														</t>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>

								<div class="row">
									<div class="col-12">
										<t t-call="ess_portal.team_requests"/>
									</div>
								</div>
							</section>
						</div>
					</div>

					<footer class="main-footer">
						&amp;copy; <script>document.write(new Date().getFullYear())</script> <a href="#">AARSOL</a>. All Rights Reserved.
					</footer>

				  	<t t-call="ess_portal.ess_quick_action"/>
  					<t t-call="ess_portal.ess_right_menu"/>
				</div>

				<!-- Sidebar -->
				<t t-call-assets="ess_portal_assets.ess_assets" t-css="false"/>
