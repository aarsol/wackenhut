<odoo>
	<template name="no_task" id="no_task">
		<div class="media align-items-center">
			<div class="media-body">
				<p>
					No Task Pending for <strong><t t-esc="msg"/></strong>
				</p>
			</div>
		</div>
	</template>

	<template name="pending_team_leave_request" id="pending_team_leave_request">
		<div t-attf-id="{{leave['table_name2']}}_{{leave['id']}}" class="media align-items-center">
			<span class="badge badge-dot badge-danger"/>
			<div class="media-body">
				<p>
					<a href="#"><strong><t t-esc="leave['leave_name']"/></strong></a>
					<small class="sidetitle"><t t-esc="leave['state']"/></small>
				</p>
				<p>
					<a href="#">Requested By: <strong><t t-esc="leave['employee_name']"/></strong></a>
					<small class="sidetitle"><t t-esc="leave['employee_job_name']"/></small>
				</p>
				<p>Number of days: <t t-esc="leave['number_of_days']"/> Next of Duty: <t t-esc="leave['next_on_duty']"/></p>
				<p>Purpose: <t t-esc="leave['leave_purpose']"/></p>
				<p>From: <t t-esc="leave['date_from']"/> To: <t t-esc="leave['date_to']"/></p>
			</div>
			<div class="media-right gap-items">
				<div class="btn-group">
					<a class="media-action lead" href="#" data-bs-toggle="dropdown"><i class="ion-android-more-vertical"/></a>
					<div class="dropdown-menu dropdown-menu-end">
						<a class="dropdown-item"  t-attf-onclick="approve_request('{{leave['table_name']}}',{{leave['id']}})"><i class="fa fa-fw fa-check"/> Approve</a>
						<a class="dropdown-item" t-attf-onclick="reject_request('{{leave['table_name']}}',{{leave['id']}})"><i class="fa fa-fw fa-remove"/> Reject</a>
					</div>
				</div>
			</div>
		</div>
	</template>
