<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_employee_transfer_form" model="ir.ui.view">
            <field name="name">hr.employee.transfer.form</field>
            <field name="model">hr.employee.transfer</field>
            <field name="arch" type="xml">
                <form string="Employee Transfer">
                    <header>
                        <button name="action_validate" type="object" class="oe_highlight" string="Validate" states="draft" groups="hr.group_hr_user"/>
                        <button name="action_approve" type="object" class="oe_highlight" string="Approve" states="validate" groups="hr.group_hr_user"/>
                        <button name="action_turn_to_draft" type="object" class="oe_highlight" string="Turn To Draft" states="validate" groups="hr.group_hr_user"/>
                        <button name="action_reject" type="object" class="oe_highlight" string="Reject" states="validate" groups="hr.group_hr_user"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id" required="1"
                                       options="{'no_create':True}"
                                       attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                            </group>
                            <group>
                                <field name="transfer_date" required="1"
                                       attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                <field name="transfer_type" required="1"
                                       options="{'no_create':True}"
                                       attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                            </group>
                        </group>

                        <group>
                            <group string="Old Data" name="employee_old_info">
                                <field name="department_id"/>
                                <field name="job_id"/>
                                <field name="manager_id"/>
                                <field name="contract_id"/>
                                <field name="current_salary" string="Salary"/>
                            </group>
                            <group string="New Data" name="employee_new_info">
                                <field name="new_department_id" string="Department"
                                       options="{'no_create':True,}"
                                       attrs="{'readonly':[('state', '!=', 'draft')]}"
                                       required="1"/>
                                <field name="new_job_id" string="Designation"
                                       options="{'no_create':True,}"
                                       attrs="{'readonly':[('state', '!=', 'draft')]}"
                                       required="1"/>
                                <field name="new_manager_id" string="Manager"
                                       options="{'no_create':True,}"
                                       attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                <field name="new_salary" string="Salary"/>
                                <field name="new_contract_id" string="Contract" readonly="1"
                                       attrs="{'invisible':[('is_create_new_contract','!=',True)]}"/>
                            </group>

                            <group>
                                <field name="is_create_new_contract"
                                       widget="boolean_toggle"
                                       attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                <field name="copy_allowances"
                                       widget="boolean_toggle"
                                       attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                <field name="copy_deductions"
                                       widget="boolean_toggle"
                                       attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <group string="Remarks">
                            <field name="remarks" nolabel="1" attrs="{'readonly':[('state', '=', 'lock')]}"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_hr_employee_transfer_tree" model="ir.ui.view">
            <field name="name">hr.employee.transfer.tree</field>
            <field name="model">hr.employee.transfer</field>
            <field name="arch" type="xml">
                <tree decoration-info="state=='draft'" decoration-primary="state=='validate'" decoration-success="state=='approve'" decoration-danger="state=='cancel'">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="create_uid" string="Created By" optional="show" widget="many2one_avatar_user"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="contract_id"/>
                    <field name="current_salary"/>
                    <field name="transfer_date"/>
                    <field name="transfer_type"/>
                    <field name="new_department_id"/>
                    <field name="new_job_id"/>
                    <field name="new_salary"/>
                    <field name="is_create_new_contract" optional="1"/>
                    <field name="state" widget="badge" decoration-info="state=='draft'" decoration-primary="state=='validate'" decoration-success="state=='approve'" decoration-danger="state=='cancel'"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_employee_transfer_type_search" model="ir.ui.view">
            <field name="name">hr.employee.transfer.search</field>
            <field name="model">hr.employee.transfer</field>
            <field name="arch" type="xml">
                <search string="Transfer Filters">
                    <field name="name" filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]" string="Location"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="contract_id"/>
                    <field name="current_salary"/>
                    <field name="transfer_date"/>
                    <field name="transfer_type"/>
                    <field name="new_department_id"/>
                    <field name="new_job_id"/>
                    <field name="new_salary"/>

                    <filter string="Draft" name="filter_draft" domain="[('state','=','draft')]"/>
                    <filter string="Validate" name="filter_validated" domain="[('state','=','validate')]"/>
                    <filter string="Approve" name="filter_approve" domain="[('state','=','approve')]"/>
                    <filter string="Cancel" name="filter_cancel" domain="[('state','=','cancel')]"/>
                    <filter string="Transfer Date" name="filter_transfer_date" date="transfer_date"/>

                    <newline/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_transfer_date" string="Transfer Date" domain="[]" context="{'group_by':'transfer_date'}"/>
                        <separator/>
                        <filter name="group_by_department" string="Current Department" domain="[]" context="{'group_by':'department_id'}"/>
                        <filter name="group_by_job_id" string="Current Job" domain="[]" context="{'group_by':'job_id'}"/>
                        <separator/>
                        <filter name="group_by_transfer_type" string="Transfer Type" domain="[]" context="{'group_by':'transfer_type'}"/>
                        <separator/>
                        <filter name="group_by_state" string="Status" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_hr_employee_transfer" model="ir.actions.act_window">
            <field name="name">Employee Transfer</field>
            <field name="res_model">hr.employee.transfer</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click To Create A New Record.
                </p>
            </field>
        </record>

        <menuitem
                id="menu_hr_employee_transfer"
                parent="hr.menu_hr_employee_payroll"
                name="Employee Transfers"
                action="action_hr_employee_transfer"
                groups="hr.group_hr_user,base.group_user"
                sequence="550"/>
    </data>
</odoo>
