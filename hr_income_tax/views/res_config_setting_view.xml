<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_config_settings_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.fee</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="60"/>
        <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='retirement_period']" position="after">
                <div name="current_tax_slab" class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <div class="content-group mt16">
                            <label class="o_form_label o_light_label" for="current_tax_slab"/>
                            <field name="current_tax_slab" options="{'no_create':True}"/>
                        </div>
                    </div>
                    <div class="o_setting_right_pane">
                        <div class="text-muted">
                            Choose Your Current Year Tax Slab.
                        </div>
                    </div>
                </div>

                <div name="taxable_income" class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <div class="content-group mt16">
                            <label class="o_form_label o_light_label" for="taxable_income"/>
                            <field name="taxable_income"/>
                        </div>
                    </div>
                    <div class="o_setting_right_pane">
                        <div class="text-muted">
                            Taxable Gross Amount.
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-12 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="create_income_tax_schedule"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="create_income_tax_schedule" string="Generate the Income Tax Schedule"/>
                        <div class="text-muted">
                            Generate the Income Tax Schedule When Contract is Generate
                        </div>
                    </div>
                </div>

                <div name="rebate_rate" class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <div class="content-group mt16">
                            <label class="o_form_label o_light_label" for="rebate_rate"/>
                            <field name="rebate_rate"/>
                        </div>
                    </div>
                    <div class="o_setting_right_pane">
                        <div class="text-muted">
                            Configure Rebate Rate.
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>

</odoo>
