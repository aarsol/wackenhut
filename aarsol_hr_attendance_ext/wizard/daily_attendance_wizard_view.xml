<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_daily_attendance_wizard" model="ir.ui.view">
            <field name="name">Daily Attendance Wizard</field>
            <field name="model">daily.attendance.wizard</field>
            <field name="arch" type="xml">
            <form string="Daily Attendance">
                <footer>
                    <button name="print_report" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                     <field name="page_breaker"/>
                </group>
                
                <group>
                	<field name="employee_ids" strong="Employee" context="{'tree_view_ref': 'hr_ext.view_employee_wizard_tree'}"/>
                </group>                
                
            </form>
            </field>
        </record>

        <record id="action_daily_attendance_wizard" model="ir.actions.act_window">
            <field name="name">Daily Attendance Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">daily.attendance.wizard</field>
            <field name="view_mode">form</field>
             <field name="view_id" ref="view_daily_attendance_wizard"/>
             <field name="context">{}</field>
            <field name="target">new</field>
        </record>
        
    </data>
</odoo>
