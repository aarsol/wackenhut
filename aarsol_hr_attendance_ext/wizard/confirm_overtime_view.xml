<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Employee Overtime Confirm Wiz-->
        <record id="view_overtime_confirm" model="ir.ui.view">
            <field name="name">hr.overtime.confirm.view</field>
            <field name="model">hr.overtime.confirm</field>
            <field name="arch" type="xml">
                <form string="Overtime to Confirm">
                    <group colspan="4" string="Overtimes">
                        <field name="overtime_ids" nolabel="1"/>
                    </group>
                    <newline/>
                    <footer>
                        <button name="action_confirm_overtime" type="object" string="Confirm Overtimes" class="oe_highlight"/>
                        <button special="cancel" string="Close"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_overtimes_to_confirm" model="ir.actions.act_window">
            <field name="name">Confirm Overtimes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.overtime.confirm</field>
            <field name="view_mode">form</field>
            <field name="groups_id" eval="[(4,ref('hr_attendance.group_hr_attendance_user'))]"/>
            <field name="target">new</field>
        </record>

        <record id="overtimes_to_confirm_multi" model="ir.actions.act_window">
            <field name="name">Confirm Overtimes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.overtime.confirm</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_hr_employee_overtime"/>
            <field name="binding_view_types">form,list</field>
        </record>


        <!-- Monthly Overtime Confirm Wiz-->
        <record id="view_monthly_overtime_confirm" model="ir.ui.view">
            <field name="name">hr.monthly.overtime.confirm.view</field>
            <field name="model">hr.monthly.overtime.confirm</field>
            <field name="arch" type="xml">
                <form string="Overtimes to Confirm">
                    <group colspan="4" string="Overtimes">
                        <field name="overtime_ids" nolabel="1"/>
                    </group>
                    <newline/>
                    <footer>
                        <button name="action_confirm_overtime" type="object" string="Confirm Overtimes" class="oe_highlight"/>
                        <button special="cancel" string="Close"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_monthly_overtimes_to_confirm" model="ir.actions.act_window">
            <field name="name">Confirm Overtimes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.monthly.overtime.confirm</field>
            <field name="view_mode">form</field>
            <field name="groups_id" eval="[(4,ref('hr_attendance.group_hr_attendance_user'))]"/>
            <field name="target">new</field>
        </record>

        <record id="monthly_overtimes_to_confirm_multi" model="ir.actions.act_window">
            <field name="name">Confirm Overtimes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.monthly.overtime.confirm</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_hr_employee_monthly_overtime"/>
            <field name="binding_view_types">form,list</field>
        </record>

    </data>
</odoo>
