<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_overtime_inputs_wizard" model="ir.ui.view">
            <field name="name">OverTime inputs Wizard</field>
            <field name="model">overtime.inputs.wizard</field>
            <field name="arch" type="xml">
            <form string="OverTime Inputs">
	            <group>
					<group>
						<field name="date_from"/>
						<field name="date_to"/>
					</group>
	               		<group>
						</group>
	            </group>
                <footer>
                    <button name="overtime_to_inputs" string="Done" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
            </field>
        </record>
        
        <record id="action_overtime_inputs" model="ir.actions.act_window">
		<field name="name">OverTime To Inputs</field>
		<field name="res_model">overtime.inputs.wizard</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
		<field name="help" type="html">
			<p>Your Overtime records will be Converted into inputs here.</p>
		</field>
	</record>		 
        
    </data>
</odoo>
