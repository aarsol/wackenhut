<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_overtime_verify" model="ir.ui.view">
            <field name="name">hr.overtime.verify.view</field>
            <field name="model">hr.overtime.verify</field>
            <field name="arch" type="xml">
                <form string="Overtime to Verify">
                    <group colspan="4" string="Overtimes">
                        <field name="overtime_ids" nolabel="1"/>
                    </group>
                    <newline/>
                    <footer>
                        <button name="action_verify_overtime" type="object" string="Approve Overtimes" class="oe_highlight"/>
                        <button special="cancel" string="Close"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="action_overtimes_to_verify" model="ir.actions.act_window">
            <field name="name">Validate Overtimes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.overtime.verify</field>
            <field name="view_mode">form</field>
            <field name="groups_id" eval="[(4,ref('hr_attendance.group_hr_attendance_user'))]"/>
            <field name="target">new</field>
        </record>

        <record id="overtimes_to_verify_multi" model="ir.actions.act_window">
            <field name="name">Verify Overtimes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.overtime.verify</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_hr_employee_overtime"/>
            <field name="binding_view_types">form,list</field>
        </record>
        
    </data>
</odoo>
