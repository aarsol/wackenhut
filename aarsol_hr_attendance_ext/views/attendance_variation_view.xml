<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_employee_month_attendance_variations_tree_view" model="ir.ui.view">
            <field name="name">hr.employee.month.attendance.variations.tree</field>
            <field name="model">hr.employee.month.attendance.variations</field>
            <field name="arch" type="xml">
                <tree string="Attendance Variations" decoration-info="state=='draft'" decoration-success="state=='done'">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="create_uid" string="Created By" optional="show" widget="many2one_avatar_user"/>
                    <field name="employee_id"/>
                    <field name="days"/>
                    <field name="date"/>
                    <field name="state" widget="badge" decoration-info="state=='draft'" decoration-success="state=='done'"/>
                </tree>
            </field>
        </record>

        <record id="hr_employee_month_attendance_variations_form_view" model="ir.ui.view">
            <field name="name">hr.employee.month.attendance.variations.form</field>
            <field name="model">hr.employee.month.attendance.variations</field>
            <field name="arch" type="xml">
                <form string="Attendance Variations">
                    <header>
                        <button name="variation_confirm" type="object" string="Confirm" states="draft" groups="hr.group_hr_manager" class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group name="employee_id" attrs="{'readonly':[('state','!=','draft')]}">
                                <field name="employee_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="days" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>
                            <group>
                                <field name="date" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>
                        </group>
                        <group string="Description" attrs="{'readonly':[('state','!=','draft')]}">
                            <field name="note" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_employee_month_attendance_variations_action_view" model="ir.actions.act_window">
            <field name="name">Attendance Variations</field>
            <field name="res_model">hr.employee.month.attendance.variations</field>
            <field name="view_mode">tree,form</field>
        </record>

          <menuitem
                id="menu_hr_employee_month_attendance_variations"
                name="Attendance VariationðŸ•°"
                action="hr_employee_month_attendance_variations_action_view"
                parent="menu_monthly_attendance_main"
                groups="hr_attendance.group_hr_attendance_user,base.group_user"
                sequence="15"
        />

    </data>
</odoo>






