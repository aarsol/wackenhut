<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr.attendance2</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="80"/>
        <field name="inherit_id" ref="hr_attendance.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='pincode_setting_container']" position="after">

                <div class="row mt16 o_settings_container" name="apply_overtime_amount_limit">
                    <div name="apply_overtime_amount_limit" class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="content-group mt16">
                                <label class="o_form_label o_light_label" for="apply_overtime_amount_limit"/>
                                <field name="apply_overtime_amount_limit" widget="boolean_toggle"/>
                            </div>
                        </div>
                    </div>
                    <div name="employee_overtime_limit" class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="content-group mt16">
                                <label class="o_form_label o_light_label" for="overtime_amount_limit"/>
                                <field name="overtime_amount_limit"/>
                            </div>
                        </div>
                    </div>

                    <div name="overtime_input_rule" class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="content-group mt16">
                                <label class="o_form_label o_light_label" for="overtime_input_rule"/>
                                <field name="overtime_input_rule" options="{'no_open': True, 'no_quick_create':True,'no_create_edit':True}"/>
                            </div>
                        </div>
                    </div>

                    <div name="apply_ot_config_rate" class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="content-group mt16">
                                <label class="o_form_label o_light_label" for="apply_ot_config_rate"/>
                                <field name="apply_ot_config_rate" widget="boolean_toggle"/>
                            </div>
                        </div>
                    </div>

                    <div name="overtime_rate" class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="content-group mt16">
                                <label class="o_form_label o_light_label" for="overtime_rate"/>
                                <field name="overtime_rate"/>
                            </div>
                        </div>
                    </div>
                    <div name="week_days_overtime_rate" class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="content-group mt16">
                                <label class="o_form_label o_light_label" for="week_days_overtime_rate"/>
                                <field name="week_days_overtime_rate"/>
                            </div>
                        </div>
                    </div>

                </div>

            </xpath>
        </field>
    </record>
</odoo>
