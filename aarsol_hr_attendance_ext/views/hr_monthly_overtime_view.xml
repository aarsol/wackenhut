<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Monthly Overtime Register -->
        <record id="view_hr_employee_monthly_overtime_register_tree" model="ir.ui.view">
            <field name="name">hr.employee.monthly.overtime.register.tree</field>
            <field name="model">hr.employee.monthly.overtime.register</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Employee Overtime" decoration-info="state == 'draft'" decoration-success="state == 'confirm'" decoration-warning="state=='reject'">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="state" widget="badge" decoration-info="state=='draft'" decoration-success="state=='confirm'" decoration-warning="state=='reject'"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_employee_monthly_overtime_register_form" model="ir.ui.view">
            <field name="name">hr.employee.monthly.overtime.register.form</field>
            <field name="model">hr.employee.monthly.overtime.register</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Employee Overtime">
                    <header>
                        <button string="Confirm" name="action_confirm" states="draft" type="object" class="oe_highlight" groups="hr.group_hr_manager"/>
                        <button string="Refuse" name="action_refuse" states="draft" type="object" class="oe_highlight" groups="account.group_account_manager,hr.group_hr_manager"/>
                        <button string="Turn To Draft" name="action_set_draft" states="confirm" class="oe_highlight" type="object" groups="account.group_account_manager,hr.group_hr_manager"/>
                        <field name="state" widget="statusbar" nolabel="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" invisible="1"/>
                                <field name="date" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                            <page name="monthly_overtime_register" string="Overtime Detail">
                                <field name="lines" attrs="{'readonly':[('state','!=','draft')]}">
                                    <tree editable="bottom" decoration-info="state == 'draft'" decoration-success="state == 'confirm'" decoration-warning="state=='reject'">
                                        <field name="employee_code"/>
                                        <field name="employee_id" options="{'no_open': True, 'no_quick_create':True,'no_create_edit':True}"/>
                                        <field name="department_id" options="{'no_open': True, 'no_quick_create':True,'no_create_edit':True}" optional="hide"/>
                                        <field name="date" optional="hide"/>
                                        <field name="salary_input_ref" readonly="1" optional="hide"/>
                                        <field name="basic_pay" optional="hide"/>
                                        <field name="duration" required="1" sum="sum_duration"/>
                                        <field name="weekend_hours" sum="sum_weekend_hours"/>
                                        <field name="weekdays_overtime" sum="sum_weekdays_overtime"/>
                                        <field name="weekend_overtime" sum="sum_weekend_overtime"/>
                                        <field name="minutes" optional="hide"/>
                                        <field name="amount" sum="sum_amount"/>
                                        <field name="payroll_amount" optional="hide"/>
                                        <field name="extra_amount" optional="hide"/>
                                        <field name="state" optional="hide" decoration-info="state == 'draft'" decoration-success="state == 'confirm'" decoration-warning="state=='reject'"/>
                                        <field name="monthly_overtime_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_hr_employee_monthly_overtime_register_search" model="ir.ui.view">
            <field name="name">hr.employee.monthly.overtime.register.search</field>
            <field name="model">hr.employee.monthly.overtime.register</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Employee Overtime">
                    <group col="10" colspan="4">
                        <field name="name" string="Employee Code"/>
                        <field name="date"/>

                        <filter string="Date" name="overtime_dt" date="date"/>
                        <separator/>
                        <filter string="Draft" name="draft" domain="[('state','=', 'draft')]"/>
                        <filter string="Confirm" name="confirm" domain="[('state','=', 'confirm')]"/>
                        <filter string="Rejected" name="rejected" domain="[('state','=', 'reject')]"/>
                    </group>

                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Status" name="status" domain="[]" context="{'group_by':'state'}"/>
                        <separator/>
                        <filter string="Date" name="entry_date" domain="[]" context="{'group_by':'date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_hr_employee_monthly_overtime_register">
            <field name="name">Employee Monthly Overtime Register</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.monthly.overtime.register</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_hr_employee_monthly_overtime_register_search"/>
            <field name="domain">[]</field>
        </record>

        <menuitem
                id="menu_hr_employee_monthly_overtime_register"
                name="Employee Monthly Overtime Register"
                parent="overtime_root_menu"
                action="act_hr_employee_monthly_overtime_register"
                groups="base.group_user,hr.group_hr_user"
                sequence="20"
        />


        <!-- Monthly Overtime -->
        <record id="view_hr_employee_monthly_overtime_tree" model="ir.ui.view">
            <field name="name">hr.employee.monthly.overtime.tree</field>
            <field name="model">hr.employee.monthly.overtime</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Employee Overtime" decoration-info="state == 'draft'" decoration-success="state == 'confirm'" decoration-warning="state=='reject'">
                    <field name="name"/>
                    <field name="employee_code"/>
                    <field name="employee_id"/>
                    <field name="date"/>
                    <field name="duration" sum="sum_duration"/>
                    <field name="weekend_hours" sum="sum_weekend_hours"/>
                    <field name="weekdays_overtime" sum="sum_weekdays_overtime"/>
                    <field name="weekend_overtime" sum="sum_weekend_overtime"/>
                    <field name="minutes" optional="hide"/>
                    <field name="basic_pay" optional="hide"/>
                    <field name="amount" sum="sum_amount"/>
                    <field name="payroll_amount" sum="sum_payroll_amount" optional="hide"/>
                    <field name="extra_amount" sum="sum_extra_amount" optional="hide"/>
                    <field name="month"/>
                    <field name="state" widget="badge" decoration-info="state=='draft'" decoration-success="state=='confirm'" decoration-warning="state=='reject'"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_employee_monthly_overtime_form" model="ir.ui.view">
            <field name="name">hr.employee.monthly.overtime.form</field>
            <field name="model">hr.employee.monthly.overtime</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Employee Overtime">
                    <header>
                        <button string="Confirm" name="action_confirm" states="draft" type="object" class="oe_highlight" groups="hr.group_hr_manager"/>
                        <button string="Refuse" name="action_refuse" states="draft" type="object" groups="account.group_account_manager,hr.group_hr_manager"/>
                        <field name="state" widget="statusbar" nolabel="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id" options="{'no_open': True, 'no_quick_create':True,'no_create_edit':True}"/>
                                <field name="employee_code" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="department_id" options="{'no_open': True, 'no_quick_create':True,'no_create_edit':True}"/>
                                <field name="date"/>
                                <field name="month"/>
                                <field name="salary_input_ref" readonly="1"/>
                            </group>
                            <group>
                                <field name="allow_previous_month" widget="boolean_toggle"/>
                                <field name="is_previous_overtime" widget="boolean_toggle"
                                       attrs="{'invisible':[('allow_previous_month','=',False)],
                                       'required':[('allow_previous_month','=',True)]}"/>
                                <field name="previous_month_date"
                                       attrs="{'invisible':[('allow_previous_month','=',False)],
                                       'required':[('allow_previous_month','=',True)]}"/>
                                <field name="basic_pay"/>
                                <field name="duration" required="1"/>
                                <field name="weekend_hours" required="1"/>
                                <field name="weekdays_overtime" required="1"/>
                                <field name="weekend_overtime" required="1"/>
                                <field name="minutes"/>
                                <field name="amount"/>
                                <field name="payroll_amount"/>
                                <field name="extra_amount"/>
                            </group>
                        </group>
                        <group colspan="4">
                            <field name="description"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_hr_employee_monthly_overtime_search" model="ir.ui.view">
            <field name="name">hr.employee.monthly.overtime.search</field>
            <field name="model">hr.employee.monthly.overtime</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Employee Overtime">
                    <group col="10" colspan="4">
                        <field name="employee_code" string="Employee Code"/>
                        <field name="employee_id" string="Employee" filter_domain="['|',('employee_id.code','=',self),('employee_id.name','ilike',self)]"/>
                        <field name="date"/>
                        <field name="amount"/>
                        <field name="month"/>

                        <filter string="Date" name="overtime_dt" date="date"/>
                        <separator/>
                        <filter string="Draft" name="draft" domain="[('state','=', 'draft')]"/>
                        <filter string="Confirm" name="confirm" domain="[('state','=', 'confirm')]"/>
                        <filter string="Rejected" name="rejected" domain="[('state','=', 'reject')]"/>
                    </group>

                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Month" name="overtime_month" domain="[]" context="{'group_by':'month'}"/>
                        <filter string="Status" name="status" domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Employee" name="employee" domain="[]" context="{'group_by':'employee_id'}"/>
                        <filter string="Amount" name="overtime_amount" domain="[]" context="{'group_by':'amount'}"/>
                        <filter string="Date" name="entry_date" domain="[]" context="{'group_by':'date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="hr_employee_monthly_overtime_pivot" model="ir.ui.view">
            <field name="name">hr.employee.monthly.overtime.pivot</field>
            <field name="model">hr.employee.monthly.overtime</field>
            <field name="arch" type="xml">
                <pivot string="Overtime Analysis" disable_linking="True">
                    <field name="department_id" type="row"/>
                    <field name="date" interval="month" type="col"/>
                    <field name="amount" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="hr_employee_monthly_overtime_graph" model="ir.ui.view">
            <field name="name">hr.employee.monthly.overtime.graph</field>
            <field name="model">hr.employee.monthly.overtime</field>
            <field name="arch" type="xml">
                <graph string="Overtime Analysis">
                    <field name="department_id" type="col"/>
                    <field name="date" interval="month" type="row"/>
                    <field name="amount" type="measure"/>
                </graph>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_hr_employee_monthly_overtime">
            <field name="name">Employee Monthly Overtime</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.monthly.overtime</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="search_view_id" ref="view_hr_employee_monthly_overtime_search"/>
            <field name="domain">[]</field>
        </record>

        <menuitem
                id="menu_hr_employee_monthly_overtime"
                name="Employee Monthly Overtime"
                parent="overtime_root_menu"
                action="act_hr_employee_monthly_overtime"
                groups="base.group_user,hr.group_hr_user"
                sequence="30"
        />

    </data>
</odoo>
