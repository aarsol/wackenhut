        <record id="view_hr_employee_overtime_tree" model="ir.ui.view">
            <field name="name">hr.employee.overtime.tree</field>
            <field name="model">hr.employee.overtime</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Employee Overtime" decoration-info="state == 'draft'" decoration-primary="state == 'confirm'" decoration-muted="state == 'verify'" decoration-success="state =='approve'">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="entry_date"/>
                    <field name="date"/>
                    <field name="duration"/>
                    <field name="minutes"/>
                    <field name="amount" groups="account.group_account_manager"/>
                    <field name="month"/>
                    <field name="state"/>
                    <field name="approve_date"/>
                    <field name="verified_date"/>
                    <field name="overtime_status" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_employee_overtime_form" model="ir.ui.view">
            <field name="name">hr.employee.overtime.form</field>
            <field name="model">hr.employee.overtime</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Employee Overtime">
                    <header>
                        <button string="Control Room" name="action_verify" type="object" attrs="{'invisible': [('state', '!=', 'draft')]}" class="oe_highlight"/>
                        <button string="Confirm" name="action_confirm" states="verify" type="object" class="oe_highlight" groups="account.group_account_manager"/>
                        <button string="Refuse" name="action_refuse" states="draft,verify" type="object" groups="account.group_account_manager,hr.group_hr_manager"/>
                        <field name="state" widget="statusbar" nolabel="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="employee_id" options="{'no_open': True, 'no_quick_create':True,'no_create_edit':True}"/>
                                <field name="department_id" options="{'no_open': True, 'no_quick_create':True,'no_create_edit':True}"/>
                                <field name="month"/>
                                <field name="overtime_status" readonly="1"/>
                            </group>
                            <group>
                                <field name="entry_date" readonly="1"/>
                                <field name="date"/>
                                <field name="duration" sum="Amount"/>
                                <field name="minutes" sum="Minutes"/>
                                <field name="amount" sum="Amount" groups="hr_attendance.group_hr_attendance_manager"/>
                                <field name="approve_date"/>
                                <field name="verified_date"/>
                            </group>
                        </group>
                        <group colspan="4">
                            <field name="description"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="view_hr_employee_overtime_search" model="ir.ui.view">
            <field name="name">hr.employee.overtime.search</field>
            <field name="model">hr.employee.overtime</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Employee Overtime">

                    <group col="10" colspan="4">
                        <field name="employee_id" string="Employee" filter_domain="['|',('employee_id.code','=',self),('employee_id.name','ilike',self)]"/>
                        <field name="date"/>
                        <field name="amount"/>
                        <field name="month"/>
                        <field name="approve_date"/>

                        <filter string="Entry Date" name="entry_date" date="entry_date"/>
                        <filter string="Overtime Date" name="overtime_dt" date="date"/>
                        <separator/>
                        <filter string="Draft" name="draft" domain="[('state','=', 'draft')]"/>
                        <filter string="Control Room" name="control_room" domain="[('state','=', 'verify')]"/>
                        <filter string="Confirm" name="confirm" domain="[('state','=', 'confirm')]"/>
                        <filter string="Rejected" name="rejected" domain="[('state','=', 'reject')]"/>
                    </group>

                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Month" name="overtime_month" domain="[]" context="{'group_by':'month'}"/>
                        <filter string="Status" name="status" domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Overtime Date (Day)" name="overtime_date_day" domain="[]" context="{'group_by':'date'}"/>
                        <filter string="Overtime Date (Month)" name="overtime_date" domain="[]" context="{'group_by':'date'}"/>

                        <filter string="Employee" name="employee" domain="[]" context="{'group_by':'employee_id'}"/>
                        <filter string="Amount" name="overtime_amount" domain="[]" context="{'group_by':'amount'}"/>
                        <filter string="Entry Date" name="entry_date" domain="[]" context="{'group_by':'entry_date'}"/>
                        <filter string="Posting Status" name="posting_status" domain="[]" context="{'group_by':'overtime_status'}"/>

                        <separator/>
                        <filter string="Approved By Month" name="approved_by_month" domain="[]" context="{'group_by':'approve_date:month'}"/>
                        <filter string="Approved By Week" name="approved_by_day" domain="[]" context="{'group_by':'approve_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="hr_employee_overtime_pivot" model="ir.ui.view">
            <field name="name">hr.employee.overtime.pivot</field>
            <field name="model">hr.employee.overtime</field>
            <field name="arch" type="xml">
                <pivot string="Overtime Analysis" disable_linking="True">
                    <field name="department_id" type="row"/>
                    <field name="date" interval="month" type="col"/>
                    <field name="amount" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="hr_employee_overtime_graph" model="ir.ui.view">
            <field name="name">hr.employee.overtime.graph</field>
            <field name="model">hr.employee.overtime</field>
            <field name="arch" type="xml">
                <graph string="Overtime Analysis">
                    <field name="department_id" type="col"/>
                    <field name="date" interval="month" type="row"/>
                    <field name="amount" type="measure"/>
                </graph>
            </field>
        </record>

