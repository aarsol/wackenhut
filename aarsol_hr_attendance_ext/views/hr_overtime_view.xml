<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_hr_analysis_period_tree" model="ir.ui.view">
            <field name="name">hr.analysis.period.tree</field>
            <field name="model">hr.analysis.period</field>
            <field name="arch" type="xml">
                <tree string="Overtime Periods" editable="top">
                    <field name="sequence"/>
                    <field name="name"/>
                    <field name="period_from"/>
                    <field name="period_to"/>
                    <field name="month"/>
                    <field name="month_abbr"/>
                    <field name="active_for_entry"/>
                    <field name="current"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_hr_analysis_period">
            <field name="name">Overtime Period</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.analysis.period</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>

        <!--        <menuitem-->
