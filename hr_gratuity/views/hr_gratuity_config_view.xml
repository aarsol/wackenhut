<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_gratuity_config_form" model="ir.ui.view">
            <field name="name">hr.gratuity.config.form</field>
            <field name="model">hr.gratuity.config</field>
            <field name="arch" type="xml">
                <form string="Gratuity">
                    <header>
                        <button name="action_lock" type="object" class="oe_highlight" string="Lock" states="draft" groups="hr.group_hr_user"/>
                        <button name="action_unlock" type="object" class="oe_highlight" string="UnLock" states="lock" groups="hr.group_hr_user"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1" attrs="{'readonly':[('state', '=', 'lock')]}"/>
                                <field name="code" attrs="{'readonly':[('state', '=', 'lock')]}"/>
                                <field name="type_id" attrs="{'readonly':[('state', '=', 'lock')]}"/>
                            </group>
                            <group>
                                <field name="date_from" required="1" attrs="{'readonly':[('state', '=', 'lock')]}"/>
                                <field name="date_to" required="1" attrs="{'readonly':[('state', '=', 'lock')]}"/>
                                <field name="rate" required="1" attrs="{'readonly':[('state', '=', 'lock')]}"/>
                                <field name="additional_death_rate" required="1" attrs="{'readonly':[('state', '=', 'lock')]}"/>
                            </group>
                        </group>
                        <group string="Remarks">
                            <field name="remarks" nolabel="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_hr_gratuity_config_tree" model="ir.ui.view">
            <field name="name">hr.gratuity.config.tree</field>
            <field name="model">hr.gratuity.config</field>
            <field name="arch" type="xml">
                <tree sample="1">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="rate"/>
                    <field name="additional_death_rate"/>
                    <field name="type_id"/>
                    <field name="state" widget="badge" decoration-info="state=='draft'" decoration-success="state=='lock'"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_gratuity_config_search" model="ir.ui.view">
            <field name="name">hr.gratuity.config.search</field>
            <field name="model">hr.gratuity.config</field>
            <field name="arch" type="xml">
                <search string="Gratuity Type">
                    <field name="name" filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]" string="Location"/>
                    <field name="code"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="rate"/>
                    <field name="additional_death_rate"/>
                    <field name="type_id"/>

                    <newline/>
                    <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                    <filter string="Lock" name="done" domain="[('state','=','done')]"/>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter name="group_type" string="Category" domain="[]" context="{'group_by':'type_id'}"/>
                        <filter name="group_state" string="Status" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_hr_gratuity_config" model="ir.actions.act_window">
            <field name="name">Gratuity</field>
            <field name="res_model">hr.gratuity.config</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click To Create A New Record.
                </p>
            </field>
        </record>

        <menuitem
                id="menu_hr_gratuity_config"
                name="Gratuity Config"
                action="action_hr_gratuity_config"
                parent="hr_gratuity.menu_hr_gratuity_main"
                sequence="20"/>
    </data>
</odoo>
