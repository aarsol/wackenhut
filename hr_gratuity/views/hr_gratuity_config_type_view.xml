<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_gratuity_config_type_form" model="ir.ui.view">
            <field name="name">hr.gratuity.config.type.form</field>
            <field name="model">hr.gratuity.config.type</field>
            <field name="arch" type="xml">
                <form string="Gratuity Type">
                    <header>
                        <button name="action_lock" type="object" class="oe_highlight" string="Lock" states="draft" groups="hr.group_hr_user"/>
                        <button name="action_unlock" type="object" class="oe_highlight" string="UnLock" states="lock" groups="hr.group_hr_user"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1" attrs="{'readonly':[('state', '=', 'lock')]}"/>
                                <field name="code" attrs="{'readonly':[('state', '=', 'lock')]}"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_hr_gratuity_config_type_tree" model="ir.ui.view">
            <field name="name">hr.gratuity.config.type.tree</field>
            <field name="model">hr.gratuity.config.type</field>
            <field name="arch" type="xml">
                <tree sample="1">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="state" widget="badge" decoration-info="state=='draft'" decoration-success="state=='lock'"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_gratuity_config_type_search" model="ir.ui.view">
            <field name="name">hr.gratuity.config.type.search</field>
            <field name="model">hr.gratuity.config.type</field>
            <field name="arch" type="xml">
                <search string="Gratuity Type">
                    <field name="name" filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]" string="Location"/>
                    <field name="code"/>
                    <group expand="0" string="Group By">
                    </group>
                </search>
            </field>
        </record>

        <record id="action_hr_gratuity_config_type" model="ir.actions.act_window">
            <field name="name">Gratuity Types</field>
            <field name="res_model">hr.gratuity.config.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click To Create A New Record.
                </p>
            </field>
        </record>

        <menuitem
                id="menu_hr_gratuity_config_type"
                name="Gratuity Type"
                action="action_hr_gratuity_config_type"
                parent="hr_gratuity.menu_hr_gratuity_main"
                sequence="10"/>
    </data>
</odoo>
