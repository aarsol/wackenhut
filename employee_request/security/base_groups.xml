<odoo>
    <data>
        <record model="ir.module.category" id="module_management">
            <field name="name">Request Access Right</field>
            <field name="description">User access level for Overtime module</field>
            <field name="sequence">20</field>
        </record>

        <record id="hod_request" model="res.groups">
            <field name="name">HOD</field>
            <field name="category_id" ref="module_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="hr_request" model="res.groups">
            <field name="name">UCP HR</field>
            <field name="category_id" ref="module_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="hr_prorector" model="res.groups">
            <field name="name">Pro Rector</field>
            <field name="category_id" ref="module_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="finance" model="res.groups">
            <field name="name">Finance</field>
            <field name="category_id" ref="module_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="parent_department_hod" model="res.groups">
            <field name="name">Parent Department HOD</field>
            <field name="category_id" ref="module_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="sub_parent_department_hod" model="res.groups">
            <field name="name">Sub Parent Department HOD</field>
            <field name="category_id" ref="module_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="special_request_employee" model="ir.rule">
            <field name="name">See only His/Her employee</field>
            <field name="model_id" ref="model_special_hr_leave"/>
            <field name="domain_force">[('employee_id.parent_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('hod_request'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>
    </data>
</odoo>