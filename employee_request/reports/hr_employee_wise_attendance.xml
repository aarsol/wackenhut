<odoo>
    <template id="ucp_employee_request.employee_wise_reportaaa">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <style>
                        #tbl1 > thead
                        {
                        border-top : 1px solid black;
                        }
                    </style>
                    <div class="row" style="width:100%">
                        <div class="col-12" style="text-align:center">
                            <h3>Missed Attendance Report</h3>
                        </div>
                    </div>
                    <br/>
                    <table class="table table-sm" id="tbl1">
                        <thead>
                            <tr>
                                <th style="border-top: 1px solid black; border-bottom: 1px solid black;">
                                    <nobr>Employee Code</nobr>
                                </th>
                                <th style="border-top: 1px solid black; border-bottom: 1px solid black;">
                                    <nobr>Employee Name</nobr>
                                </th>
                                <th style="border-top: 1px solid black; border-bottom: 1px solid black;">
                                    Designation
                                </th>
                                <th style="border-top: 1px solid black; border-bottom: 1px solid black;">
                                    <nobr>Proposed Date Time</nobr>
                                </th>
                                <th style="border-top: 1px solid black; border-bottom: 1px solid black;">
                                    <nobr>Machine Date Time</nobr>
                                </th>
                                <th style="border-top: 1px solid black; border-bottom: 1px solid black;">
                                    <nobr>Difference</nobr>
                                </th>
                                <th style="border-top: 1px solid black; border-bottom: 1px solid black;">
                                    <nobr>Attendance Type</nobr>
                                </th>
                                <th style="border-top: 1px solid black; border-bottom: 1px solid black;">
                                    <nobr>Applied Date Time</nobr>
                                </th>
                                <th style="border-top: 1px solid black; border-bottom: 1px solid black;">
                                    Status
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="employee_list" t-as="line">
                                <tr>
                                    <td style="border-bottom: 1px solid black;">
                                        <t t-esc="line['code']"/>
                                    </td>
                                    <td style="border-bottom: 1px solid black;">
                                        <t t-esc="line['employe_name']"/>
                                    </td>
                                    <td style="border-bottom: 1px solid black;">
                                        <t t-esc="line['job']"/>
                                    </td>
                                    <td style="border-bottom: 1px solid black;">
                                        <t t-esc="line['checkin_date']"/>
                                        <t t-esc="line['checkout_date']"/>
                                    </td>
                                    <td style="border-bottom: 1px solid black;">
                                        <t t-if="line['checkin'] == True and line['checkin_machine_date'] == None">
                                            <h6>None</h6>
                                        </t>
                                        <t t-if="line['checkin'] == True and line['checkin_machine_date'] != None">
                                            <t t-esc="line['checkin_machine_date']"/>
                                        </t>

                                        <t t-if="line['checkout'] == True and line['checkin_machine_date'] == None">
                                            <h6>None</h6>
                                        </t>
                                        <t t-if="line['checkout'] == True and line['checkin_machine_date'] != None">
                                            <t t-esc="line['checkout_machine_date']"/>
                                        </t>
                                    </td>
                                    <td style="border-bottom: 1px solid black;">
                                        <t t-if="line['checkin'] == True and line['checkin_date_difference'] == None">
                                            <h6>Nill</h6>
                                        </t>
                                        <t t-if="line['checkin'] == True and line['checkin_date_difference'] != None">
                                            <t t-esc="line['checkin_date_difference']"/>
                                        </t>

                                        <t t-if="line['checkout'] == True and line['checkout_date_difference'] == None">
                                            <h6>Nill</h6>
                                        </t>
                                        <t t-if="line['checkout'] == True and line['checkout_date_difference'] != None">
                                            <t t-esc="line['checkout_date_difference']"/>
                                        </t>
                                    </td>
                                    <td style="border-bottom: 1px solid black;">
                                        <t t-if="line['checkin'] == True">
                                            <h6>Check In</h6>
                                        </t>
                                        <t t-if="line['checkout'] == True">
                                            <h6>Check Out</h6>
                                        </t>
                                    </td>
                                    <td style="border-bottom: 1px solid black;">
                                        <t t-esc="line['applied_date_time']"/>
                                    </td>
                                    <td style="border-bottom: 1px solid black;">
                                        <t t-esc="line['status']"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
