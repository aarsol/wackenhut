<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="employee_leave_report_id">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <style>
                        .borderlines{
                        border-bottom:1px solid gray;
                        border-collapse: collapse;
                        padding:5px;
                        }
                        .h3{
                        font-family:Arial;
                        }
                        .borders{
                        border:1px solid black;
                        }
                    </style>
                    <div class="header">
                        <div class="row">
                            <div class="col-2">
                                <img style="width:150px;height:100px;margin-top:-10px"
                                     t-att-src="image_data_uri(res_company.logo)"/>
                            </div>
                            <div class="col-7">
                                <strong style="text-align:center">
                                    <p t-if="res_company.name" style="font-size: 24px;">
                                        <span t-field="res_company.name"/>
                                    </p>
                                    <h4>Travel Request</h4>
                                </strong>
                            </div>
                            <div class="col-3">
                                <ul class="list-unstyled">
                                    <li t-if="res_company.street" style="font-size: 14px;">
                                        <span t-field="res_company.street"/>
                                    </li>
                                    <li t-if="res_company.street2" style="font-size: 14px;">
                                        <span t-field="res_company.street2"/>
                                    </li>
                                    <li t-if="res_company.city" style="font-size: 14px;">
                                        <span t-field="res_company.city"/>
                                    </li>
                                    <li t-if="res_company.country_id">
                                        <span t-field="res_company.country_id"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div>
                        <table class="table table-condensed"
                               style="border:1px solid black;width:100%;border-collapse: collapse;">
                            <tr>
                                <td class="borderlines" colspan="2"
                                    style="text-align:center;padding-top:20px;width:50%">
                                    <p style="margin-top:5px;font-size:20px">
                                        <strong>Form Status :</strong>
                                        <strong>
                                            <span style="margin-left:10px;text-transform: capitalize;"
                                                  t-esc="str(dict(doc._fields['state'].selection).get(doc.state))"/>
                                        </strong>
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <td class="borderlines" style="padding-top:20px;width:50%">
                                    <p style="margin-top:15px">
                                        <strong>Employee :</strong>
                                        <span style="margin-left:10px;" t-esc="doc.employee_id.name"/>
                                    </p>
                                </td>

                                <td class="borderlines" style="width:50%">
                                    <p style="margin-top:15px">
                                        <strong>Department :</strong>
                                        <span style="margin-left:10px;" t-esc="doc.department_id.name"/>
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <td class="borderlines" style="width:50%">
                                    <p style="margin-top:15px">
                                        <strong>Leaves Type :</strong>
                                        <span style="margin-left:10px;" t-esc="doc.holiday_status_id.name"/>
                                    </p>
                                </td>
                                <td class="borderlines" style="width:50%">
                                    <p style="margin-top:15px">
                                        <strong>Description :</strong>
                                        <span style="margin-left:10px;" t-esc="doc.name"/>
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <td class="borderlines" style="width:50%">
                                    <p style="margin-top:15px">
                                        <strong>Date From :</strong>
                                        <span style="margin-left:10px;" t-esc="doc.request_date_from"/>
                                    </p>
                                </td>
                                <td class="borderlines" style="width:50%">
                                    <p style="margin-top:15px">
                                        <strong>Date To :</strong>
                                        <span style="margin-left:10px;" t-esc="doc.request_date_to"/>
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <td class="borderlines" style="width:50%">
                                    <p style="margin-top:15px">
                                        <strong>Duration :</strong>
                                        <span style="margin-left:10px;" t-esc="doc.number_of_days"/>
                                    </p>
                                </td>
                                <td class="borderlines" style="width:50%">
                                    <p style="margin-top:15px">
                                        <strong>Contact Address During Leave :</strong>
                                        <span style="margin-left:10px;" t-esc="doc.contact_address"/>
                                    </p>
                                </td>

                            </tr>
                            <tr>
                                <td class="borderlines" style="width:50%">
                                    <p style="margin-top:15px">
                                        <strong>Next On Duty :</strong>
                                        <span style="margin-left:10px;" t-esc="doc.next_on_duty.name"/>
                                    </p>
                                </td>
                                <td class="borderlines" style="width:50%">
                                    <p style="margin-top:15px">
                                        <strong>Work Pending to be managed by next on duty :</strong>
                                        <span style="margin-left:10px;" t-esc="doc.work_pending"/>
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <td class="borderlines" style="width:50%">
                                    <p style="margin-top:15px">
                                        <strong>Purpose :</strong>
                                        <span style="margin-left:10px;" t-esc="doc.leave_purpose"/>
                                    </p>
                                </td>
                                <td class="borderlines" style="width:50%">
                                    <p style="margin-top:15px">
                                        <strong>Remarks :</strong>
                                        <span style="margin-left:10px;" t-esc="doc.report_note"/>
                                    </p>
                                </td>
                            </tr>
                        </table>
                        <table class="table table-condensed"
                               style="margin-top:80px;width:100%;border-collapse: collapse;">
                            <tr>
                                <td style="border-top:1px solid black;width:30%;text-align:center">
                                    Signature
                                </td>
                                <td style="width:40%">

                                </td>
                                <td style="border-top:1px solid black;width:30%;text-align:center">
                                    Employee Of Signature
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>