<odoo>
    <data>
        <record id="view_hr_employee_wise_wiz" model="ir.ui.view">
            <field name="name">hr employee wise wiz</field>
            <field name="model">hr.employee.wise.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h4>Missed Attendance Report</h4>
                        <group>
                            <group>
                                <field name="employee" attrs="{'invisible':[('is_check','=', True)]}"/>
                                <field name="is_check"/>
                                <field name="department" attrs="{'invisible':[('is_check','!=', True)]}"/>
                            </group>
                        </group>
                        <footer>
                            <button name="print_report" string="Print" type="object" class="btn-primary"/>
                            <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="hr_employee_wise_wiz_action" model="ir.actions.act_window">
            <field name="name">Missed Attendance Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.wise.wizard</field>
            <field name="view_mode">form,list</field>
            <field name="view_id" ref="view_hr_employee_wise_wiz"/>
            <field name="target">new</field>
            <field name="binding_view_types">form,list</field>
            <!--            <field name="binding_type">report</field>-->
            <!--            <field name="binding_model_id" ref="atmos_reports"/>-->
        </record>
        <menuitem id="menu_employee_wise_report"
                  action="hr_employee_wise_wiz_action"
                  name="Missed Attendance Report"
                  parent="hr.hr_menu_hr_reports"
                  sequence="374"/>
    </data>
</odoo>