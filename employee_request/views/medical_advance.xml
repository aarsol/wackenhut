<odoo>
    <data>
        <record id="medical_advance_view_form" model="ir.ui.view">
            <field name="name">medical_advance_view_form</field>
            <field name="model">medical.advance</field>
            <field name="arch" type="xml">
                <form string="Medical Advance Request">
                    <header>
                        <button name="action_draft" type="object" class="oe_highlight" string="Approved" states="draft"
                                groups="hr.group_hr_user"/>
                        <button name="action_approved" type="object" class="oe_highlight" string="Draft"
                                states="approved" groups="hr.group_hr_user"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"
                                       options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" attrs="{'readonly': [('state','not in',('draft'))]}"/>
                            </group>
                            <group>
                                <field name="request_date" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="amount" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>
                        </group>
                        <group string="Reason">
                            <field name="reason" nolabel="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="medical_advance_view_tree" model="ir.ui.view">
            <field name="name">medical_advance_view_tree</field>
            <field name="model">medical.advance</field>
            <field name="arch" type="xml">
                <tree string="Medical Advance Request" decoration-info="state=='draft'"
                      decoration-success="state=='approved'">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="request_date"/>
                    <field name="reason"/>
                    <field name="company_id" optional="hide" groups="base.group_multi_company"/>
                    <field name="state" widget="badge" decoration-info="state=='draft'"
                           decoration-success="state=='approved'"/>
                </tree>
            </field>
        </record>

        <record id="medical_advance_search_view" model="ir.ui.view">
            <field name="name">medical.advance.search.view</field>
            <field name="model">medical.advance</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search>
                    <field name="employee_id"/>
                    <field name="state"/>

                    <filter string="Draft" name="filter_by_draft" domain="[('state','=','draft')]"/>
                    <filter string="Approved" name="filter_by_approved" domain="[('state','=','approved')]"/>
                    <separator/>
                    <filter string="Request Date" name="request_date" date="request_date"/>
                    <newline/>

                    <group expand="0" string="Group By...">
                        <filter name="employee_id" string="Employee" domain="[]" context="{'group_by':'employee_id'}"/>
                        <separator/>
                        <filter name="state" string="Status" domain="[]" context="{'group_by':'state'}"/>
                        <separator/>
                        <filter name="company_id" string="Company" domain="[]" context="{'group_by':'company_id'}"/>
                        <separator/>
                    </group>
                    <searchpanel>
                        <field name="company_id" icon="fa-users"/>
                        <field name="state" icon="fa-users"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <record id="medical_advance_action" model="ir.actions.act_window">
            <field name="name">Medical Advance Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.advance</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="medical_advance_id"
                  name="Medical Advance Request"
                  action="medical_advance_action"
                  parent="aarsol_hr_payroll.menu_hr_employee_requests_main"
                  sequence="40"/>
    </data>
</odoo>