<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_payroll_rule_heads_form" model="ir.ui.view">
            <field name="name">hr.payroll.rule.heads.form</field>
            <field name="model">hr.payroll.rule.heads</field>
            <field name="arch" type="xml">
                <form string="Employee Account Heads">
                    <header>
                        <button name="action_lock" type="object" class="oe_highlight" string="Lock" states="draft" groups="hr.group_hr_user"/>
                        <button name="action_unlock" type="object" class="oe_highlight" string="UnLock" states="lock" groups="hr.group_hr_user"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1" attrs="{'readonly':[('state', '=', 'lock')]}"/>
                                <field name="salary_rule_id" required="1" attrs="{'readonly':[('state', '=', 'lock')]}"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}"/>
                                <field name="account_head_type" required="1" attrs="{'readonly':[('state', '=', 'lock')]}"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}"/>
                            </group>
                            <group>
                                <field name="code" attrs="{'readonly':[('state', '=', 'lock')]}"/>
                                <field name="date" attrs="{'readonly':[('state', '=', 'lock')]}"/>
                                <field name="account_id" required="1" attrs="{'readonly':[('state', '=', 'lock')]}"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}"/>
                                <field name="debit_credit_type" required="1" attrs="{'readonly':[('state', '=', 'lock')]}"/>
                            </group>
                        </group>
                        <group string="Remarks">
                            <field name="remarks" nolabel="1" attrs="{'readonly':[('state', '=', 'lock')]}"/>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_hr_payroll_rule_heads_tree" model="ir.ui.view">
            <field name="name">hr.payroll.rule.heads.tree</field>
            <field name="model">hr.payroll.rule.heads</field>
            <field name="arch" type="xml">
                <tree sample="1" string="Payroll Rule Heads" editable="bottom"
                      decoration-info="state=='draft'" decoration-success="state=='lock'">
                    <field name="name" required="1" attrs="{'readonly':[('state', '=', 'lock')]}"
                           options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}"/>
                    <field name="salary_rule_id" required="1" attrs="{'readonly':[('state', '=', 'lock')]}"
                           options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}"/>
                    <field name="account_head_type" required="1" attrs="{'readonly':[('state', '=', 'lock')]}"
                           options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}"/>
                    <field name="account_id" required="1" attrs="{'readonly':[('state', '=', 'lock')]}"
                           options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}"/>
                    <field name="debit_credit_type" required="1" attrs="{'readonly':[('state', '=', 'lock')]}"/>
                    <field name="date" attrs="{'readonly':[('state', '=', 'lock')]}"/>
                    <field name="state" widget="badge" attrs="{'readonly':[('state', '=', 'lock')]}"
                           decoration-info="state=='draft'" decoration-success="state=='lock'"/>
                    <button name="action_read_hr_payroll_rule_heads" type="object"
                            string="Setup" class="float-right btn-secondary"
                            attrs="{'readonly':[('state','!=','Draft')]}"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_payroll_rule_heads_search" model="ir.ui.view">
            <field name="name">hr.payroll.rule.heads.search</field>
            <field name="model">hr.payroll.rule.heads</field>
            <field name="arch" type="xml">
                <search string="Payroll Rule Heads">
                    <field name="name" filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]" string="Location"/>
                    <field name="code"/>
                    <field name="salary_rule_id"/>
                    <field name="account_head_type"/>
                    <field name="account_id"/>
                    <field name="debit_credit_type"/>
                    <field name="date"/>

                    <separator/>
                    <filter name="date" string="Date" date="date"/>

                    <group expand="0" string="Group By">
                        <filter string="Salary Rule" name="group_by_salary_rule" domain="[]" context="{'group_by':'salary_rule_id'}"/>
                        <filter string="Account Head Type" name="group_by_account_head_type" domain="[]" context="{'group_by':'account_head_type'}"/>
                        <filter string="Account" name="group_by_account_id" domain="[]" context="{'group_by':'account_id'}"/>
                        <separator/>
                        <filter string="Date" name="group_by_date" domain="[]" context="{'group_by':'date'}"/>
                        <filter string="Status" name="group_by_state" domain="[]" context="{'group_by':'state'}"/>
                        <separator/>
                        <filter string="Type" name="group_by_debit_credit_type" domain="[]" context="{'group_by':'debit_credit_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_hr_payroll_rule_heads" model="ir.actions.act_window">
            <field name="name">Payroll Rule Heads Mapping</field>
            <field name="res_model">hr.payroll.rule.heads</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click To Create A New Record.
                </p>
            </field>
        </record>

        <menuitem
                id="menu_hr_payroll_rule_heads"
                parent="hr_work_entry_contract_enterprise.menu_hr_payroll_configuration"
                name="Payroll Rule Heads Mapping"
                action="action_hr_payroll_rule_heads"
                groups="hr.group_hr_user,base.group_user"
                sequence="300"/>
    </data>
</odoo>
