<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_employee_account_heads_form" model="ir.ui.view">
            <field name="name">hr.employee.account.heads.form</field>
            <field name="model">hr.employee.account.heads</field>
            <field name="arch" type="xml">
                <form string="Employee Account Heads">
                    <header>
                        <button name="action_lock" type="object" class="oe_highlight" string="Lock" states="draft" groups="hr.group_hr_user"/>
                        <button name="action_unlock" type="object" class="oe_highlight" string="UnLock" states="lock" groups="hr.group_hr_user"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1" attrs="{'readonly':[('state', '=', 'lock')]}"/>
                                <field name="code" attrs="{'readonly':[('state', '=', 'lock')]}"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_hr_employee_account_heads_tree" model="ir.ui.view">
            <field name="name">hr.employee.account.heads.tree</field>
            <field name="model">hr.employee.account.heads</field>
            <field name="arch" type="xml">
                <tree sample="1" string="Employee Account Heads" decoration-info="state=='draft'" decoration-success="state=='lock'">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="create_uid" string="Created By" widget="many2one_avatar_user"/>
                    <field name="state" widget="badge" decoration-info="state=='draft'" decoration-success="state=='lock'"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_employee_account_heads_search" model="ir.ui.view">
            <field name="name">hr.employee.account.heads.search</field>
            <field name="model">hr.employee.account.heads</field>
            <field name="arch" type="xml">
                <search string="Employee Account Heads Filters">
                    <field name="name" filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]" string="Location"/>
                    <field name="code"/>
                    <group expand="0" string="Group By">
                    </group>
                </search>
            </field>
        </record>

        <record id="action_hr_employee_account_heads" model="ir.actions.act_window">
            <field name="name">Employee Account Heads</field>
            <field name="res_model">hr.employee.account.heads</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click To Create A New Record.
                </p>
            </field>
        </record>

        <menuitem
                id="menu_hr_employee_account_heads"
                parent="hr.menu_human_resources_configuration"
                name="Employee Account Heads"
                action="action_hr_employee_account_heads"
                groups="hr.group_hr_user,base.group_user"
                sequence="650"/>


        <record id="view_hr_payscale_gl_form" model="ir.ui.view">
            <field name="name">hr.payscale.gl.form</field>
            <field name="model">hr.payscale</field>
            <field name="inherit_id" ref="aarsol_hr_ext.view_hr_payscale_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name='last_limit' position="after">
                        <field name="account_head_id"
                               attrs="{'readonly':[('state','!=','draft')]}"
                               options="{'no_create':True}"/>
                    </field>
                </data>
            </field>
        </record>

        <record id="view_hr_payscale_gl_tree" model="ir.ui.view">
            <field name="name">hr.payscale.gl.tree</field>
            <field name="model">hr.payscale</field>
            <field name="inherit_id" ref="aarsol_hr_ext.view_hr_payscale_tree"/>
            <field name="arch" type="xml">
                <data>
                    <field name='last_limit' position="after">
                        <field name="account_head_id" optional="hide"/>
                    </field>
                </data>
            </field>
        </record>

        <record id="view_hr_payscale_gl_search" model="ir.ui.view">
            <field name="name">hr.payscale.gl.search</field>
            <field name="model">hr.payscale</field>
            <field name="inherit_id" ref="aarsol_hr_ext.view_hr_payscale_search"/>
            <field name="arch" type="xml">
                <data>
                    <filter name='group_date_end' position="after">
                        <filter name="group_account_head_id" string="Account Head Type" domain="[]" context="{'group_by':'account_head_id'}"/>
                    </filter>
                </data>
            </field>
        </record>

    </data>
</odoo>
