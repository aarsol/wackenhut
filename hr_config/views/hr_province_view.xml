<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_province_form" model="ir.ui.view">
            <field name="name">hr.province.form</field>
            <field name="model">hr.province</field>
            <field name="arch" type="xml">
                <form string="Provinces">
                    <header>
                        <button name="action_lock" type="object" class="oe_highlight" string="Lock" states="draft" groups="hr.group_hr_user"/>
                        <button name="action_unlock" type="object" class="oe_highlight" string="UnLock" states="lock" groups="hr.group_hr_user"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"
                                       attrs="{'readonly':[('state', '=', 'lock')]}"/>
                                <field name="code" attrs="{'readonly':[('state', '=', 'lock')]}"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_hr_province_tree" model="ir.ui.view">
            <field name="name">hr.province.tree</field>
            <field name="model">hr.province</field>
            <field name="arch" type="xml">
                <tree sample="1" string="Provinces" decoration-info="state=='draft'" decoration-success="state=='lock'">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="create_uid" string="Created By" widget="many2one_avatar_user"/>
                    <field name="state" widget="badge" decoration-info="state=='draft'" decoration-success="state=='lock'"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_province_search" model="ir.ui.view">
            <field name="name">hr.province.search</field>
            <field name="model">hr.province</field>
            <field name="arch" type="xml">
                <search string="Province Filters">
                    <field name="name" filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]" string="Location"/>
                    <field name="code"/>
                    <group expand="0" string="Group By">
                    </group>
                </search>
            </field>
        </record>

        <record id="action_hr_province" model="ir.actions.act_window">
            <field name="name">Provinces</field>
            <field name="res_model">hr.province</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click To Create A New Record.
                </p>
            </field>
        </record>

        <menuitem
                id="menu_hr_province"
                parent="hr.menu_human_resources_configuration"
                name="Provinces"
                action="action_hr_province"
                groups="hr.group_hr_user,base.group_user"
                sequence="550"/>
    </data>
</odoo>
