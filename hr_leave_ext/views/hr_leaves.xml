<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <record id="hr_leave_view_2_form" model="ir.ui.view">
        <field name="name">hr.leave.view.2.form</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">
            <button name="action_approve" position="replace">
                <button string="Approve" name="action_approve" type="object" class="oe_highlight"
                        invisible="1"/>
            </button>
            <button name="action_validate" position="replace">
                <button string="Validate" name="action_validate" states="validate1" type="object"
                        groups="hr_holidays.group_hr_holidays_manager" class="oe_highlight" invisible="1"/>
            </button>
            <button name="action_refuse" position="replace">
                <button string="Refuse" name="action_refuse" type="object"
                        invisible="1"/>
            </button>
            <button name="action_draft" position="replace">
                <button string="Mark as Draft" name="action_draft" type="object"
                        invisible="1"/>
            </button>

        </field>
    </record>
    <record id="hr_leave_view_2_tree" model="ir.ui.view">
        <field name="name">hr.holidays.view.2.tree</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_tree"/>
        <field name="arch" type="xml">
            <button name="action_approve" position="replace">
                <button name="action_approve" invisible="1"/>
            </button>
            <button name="action_refuse" position="replace">
                <button name="action_refuse" invisible="1"/>
            </button>
            <button name="action_validate" position="replace">
                <button name="action_validate" invisible="1"/>
            </button>
        </field>
    </record>
    <record id="hr_leave_view_2_kanban" model="ir.ui.view">
        <field name="name">hr.leave.view.2.kanban</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_kanban"/>
        <field name="arch" type="xml">
            <button name="action_validate" position="replace">
                <button t-if="record.state.raw_value === 'validate1'"
                        name="action_validate" type="object"
                        class="btn btn-primary btn-sm mt8" groups="hr_holidays.group_hr_holidays_manager" attrs="{'invisible': [('validate_visible', '=',True)]}">Validate
                </button>
            </button>
            <field name="employee_id" position="after">
                <field name="validate_visible"/>
            </field>


        </field>
    </record>


</odoo>
