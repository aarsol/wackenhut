<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!--  Salary Allowances Template-->
        <record id="view_hr_salary_allowances_template_form" model="ir.ui.view">
            <field name="name">hr.salary.allowances.template.form.view</field>
            <field name="model">hr.salary.allowances.template</field>
            <field name="arch" type="xml">
                <form string="Allowances Template">
                    <header>
                        <button name="action_lock" type="object" class="oe_highlight" string="Lock" states="draft" groups="hr.group_hr_user"/>
                        <button name="action_unlock" type="object" class="oe_highlight" string="UnLock" states="lock" groups="hr.group_hr_user"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="date" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                            <page name="template_lines" string="Allowances">
                                <field name="template_lines" attrs="{'readonly':[('state','!=','draft')]}">
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_hr_salary_allowances_template_tree" model="ir.ui.view">
            <field name="name">hr.salary.allowances.template.tree.view</field>
            <field name="model">hr.salary.allowances.template</field>
            <field name="arch" type="xml">
                <tree string="Allowances Template" decoration-primary="state == 'draft'" decoration-success="state == 'lock'">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="create_uid" widget="many2one_avatar_user"/>
                    <field name="state" widget="badge" decoration-primary="state == 'draft'" decoration-success="state == 'lock'"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_salary_allowances_template_search" model="ir.ui.view">
            <field name="name">hr.salary.allowances.template.search</field>
            <field name="model">hr.salary.allowances.template</field>
            <field name="arch" type="xml">
                <search string="Allowance Template">
                    <field name="name"/>
                    <field name="date"/>
                    <filter name="date" string="Date" date="date"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_by_state" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- HR Section Action View -->
        <record id="action_hr_salary_allowances_template" model="ir.actions.act_window">
            <field name="name">Allowances Template</field>
            <field name="res_model">hr.salary.allowances.template</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
                id="menu_hr_salary_allowances_template"
                name="Allowances Template"
                action="action_hr_salary_allowances_template"
                parent="menu_hr_allowances_deductions"
                sequence="55"/>
    </data>
</odoo>