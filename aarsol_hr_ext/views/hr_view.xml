        <!-- HR Contract Form -->
        <record id="view_inherited_hr_contract_form" model="ir.ui.view">
            <field name="name">inherited_hr.contract.form.view</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//header" position="inside">
                        <field name="show_compute_arrears_button" invisible="1"/>
                        <button name="action_compute_arrears_deductions" type="object" attrs="{'invisible':[('show_compute_arrears_button','=',False)]}" string="Compute Arrears" class="oe_highlight"/>
                    </xpath>
                    <field name="date_start" position="before">
                        <field name="new_date_start" required="1" string="Salary Start Date" attrs="{'readonly':[('state','!=','draft')]}"/>
                    </field>

                    <field name="employee_id" position="attributes">
                        <attribute name="readonly">1</attribute>
                    </field>
                    <field name="department_id" position="attributes">
                        <attribute name="readonly">1</attribute>
                    </field>

                    <field name="structure_type_id" position="after">
                        <field name="allowance_template_id" options="{'no_create': True, 'limit': 10}"/>
                        <field name="deduction_template_id" options="{'no_create': True, 'limit': 10}"/>
                    </field>

                    <xpath expr="//page[@name='information']" position="after">
                        <page string="Allowances" name="Allowances">
                            <field name="allowance_ids">
                                <tree editable="top" delete="false">
                                    <field name="employee_id" invisible="1"
                                           domain="[('id','=',parent.employee_id)]" options="{'no_create':True,}"/>
                                    <field name="allowance_id"/>
                                    <field name="type"/>
                                    <field name="amount" readonly="1" sum="sum_amount"/>
                                    <field name="amount_fixed"
                                           attrs="{'readonly': [('type','=','formula')],
					                              'required': [('type','=','fixed')]}"/>
                                    <field name="amount_formula" readonly="1" sum="sum_amount_formula"/>
                                    <field name="expired" attrs="{'column_invisible': [('parent.state', 'not in', ('close','cancel'))]}"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Deductions" name="Deductions">
                            <field name="deduction_ids">
                                <tree editable="top" delete="false">
                                    <field name="employee_id" invisible="1"
                                           domain="[('id','=',parent.employee_id)]" options="{'no_create':True,}"/>
                                    <field name="deduction_id"/>
                                    <field name="type"/>
                                    <field name="amount" readonly="1" sum="sum_amount"/>
                                    <field name="amount_fixed"
                                           attrs="{'readonly': [('type','=','formula')],
					                              'required': [('type','=','fixed')]}"/>
                                    <field name="amount_formula" readonly="1" sum="sum_amount_formula"/>
                                    <field name="expired" attrs="{'column_invisible': [('parent.state', 'not in', ('close','cancel'))]}"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Expired Allowances" name="Expired Allowances">
                            <field name="expired_allowance_ids" readonly="1">
                                <tree editable="top" delete="false" create="false">
                                    <field name="employee_id" invisible="1"
                                           domain="[('id','=',parent.employee_id)]" options="{'no_create':True,}"/>
                                    <field name="allowance_id"/>
                                    <field name="type"/>
                                    <field name="amount"
                                           attrs="{'readonly': [('type','=','formula')],
                                            'required': [('type','=','fixed')]}" sum="sum_amount"/>
                                    <field name="amount_fixed"/>
                                    <field name="amount_formula" readonly="1" sum="sum_amount_formula"/>
                                    <field name="expiry_date"/>
                                    <field name="expired"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Expired Deductions" name="Expired Deductions">
                            <field name="expired_deduction_ids" readonly="1">
                                <tree editable="top" delete="false" create="false">
                                    <field name="employee_id" invisible="1"
                                           domain="[('id','=',parent.employee_id)]" options="{'no_create':True,}"/>
                                    <field name="deduction_id"/>
                                    <field name="type"/>
                                    <field name="amount"
                                           attrs="{'readonly': [('type','=','formula')],
                                            'required': [('type','=','fixed')]}" sum="sum_amount"/>
                                    <field name="amount_fixed"/>
                                    <field name="amount_formula" readonly="1" sum="sum_amount_formula"/>
                                    <field name="expiry_date"/>
                                    <field name="expired"/>
                                </tree>
                            </field>
                        </page>

                    </xpath>

                    <xpath expr="//group[@name='yearly_advantages']" position="after">
                        <group>
                            <field name="basic_pay_type" invisible="1"/>
                            <field name="payscale_id"/>
                            <field name="stage"/>
                            <field name="basic_pay"/>
                            <field name="personal_pay_amount" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                            <field name="match_pay"/>
                        </group>
                    </xpath>

                    <xpath expr="//div[@name='wage']" position="replace">
                        <div class="o_row" name="wage">
                            <field name="wage" string="Basic Pay" nolabel="1" attrs="{'readonly':[('basic_pay_type','=','scale_base')]}"/>
                            <span>/ month</span>
                        </div>
                        <field name="allowances_amount"/>
                        <field name="gross_salary" string="Gross WithOut Monetization"/>
                        <field name="monetization_amount" string="Monetization Alw"/>
                        <field name="gross_salary_with_monetization" string="Gross With Monetization"/>
                        <field name="deductions_amount"/>
                        <field name="net_salary"/>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="view_inherited_hr_contract_tree" model="ir.ui.view">
            <field name="name">inherited_hr.contract.tree.view</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_tree"/>
            <field name="arch" type="xml">
                <field name="date_start" position="after">
                    <field name="new_date_start" string="Salary Start Date"/>
                </field>

                <field name="employee_id" position="after">
                    <field name="department_id" optional="hide"/>
                </field>
<!--                <field name="kanban_state" position="attributes">-->
<!--                    <attribute name="optional">hide</attribute>-->
<!--                </field>-->
                <field name="state" position="after">
                    <field name="structure_type_id" optional="hide"/>
                </field>
                <field name="resource_calendar_id" position="attributes">
                    <attribute name="optional">hide</attribute>
                </field>
                <field name="date_end" position="after">
                    <field name="wage" string="Basic Pay"/>
                    <field name="allowances_amount" string="Allowances"/>
                    <field name="monetization_amount" string="Monetization Alw"/>
                    <field name="deductions_amount" string="Deductions"/>
                    <field name="gross_salary"/>
                    <field name="net_salary"/>
                </field>
            </field>
        </record>


        <record id="view_department_tree" model="ir.ui.view">
            <field name="name">hr.department.tree</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='display_name']" position="before">
                    <field name="code"/>
                </xpath>
            </field>
        </record>

        <record id="view_users_form" model="ir.ui.view">
            <field name="name">res.users.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='access_rights']" position="after">
                    <page name="departments" string='Departments'>
                        <group>
                            <field name="dept_ids"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>