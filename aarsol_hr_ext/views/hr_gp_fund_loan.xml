<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_hr_gp_fund_laon_tree" model="ir.ui.view">
        <field name="name">hr.gp.fund.loan.tree</field>
        <field name="model">hr.gp.fund.loan</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Gp Fund">
                <field name="employee_id"/>
                <field name="designation_id"/>
                <field name="department_id"/>
                <field name="section_id"/>
                <field name="gp_advance"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_gp_fund_loan_form" model="ir.ui.view">
        <field name="name">hr.gp.fund.advance.form</field>
        <field name="model">hr.gp.fund.loan</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <form string="GP Fund">
                <header groups="base.group_user">
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="birthday"/>
                            <field name="age"/>
                        </group>
                        <group>
                            <field name="designation_id"/>
                            <field name="department_id"/>
                            <field name="section_id"/>
                        </group>
                        <group>
                            <field name="total_balance"/>
                            <field name="gp_advance"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Post">
                            <field name="gp_line_ids">
                                <tree editable="bottom">
                                    <field name="month"/>
                                    <field name="monthly_contribution" sum="Total Contribution"/>
                                    <field name="running_balance" sum="Total Running Balance"/>
                                    <field name="is_profit" readonly="1"/>
                                </tree>
                            </field>
                        </page>

                        <group class="oe_subtotal_footer oe_right">
                            <field name="total_monthly_contribution"/>
                            <field name="profit_amount"/>
                            <field name="total_balance" class="oe_subtotal_footer_separator"/>
                        </group>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field groups="base.group_user" name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_hr_gp_fund_loan" model="ir.actions.act_window">
        <field name="name">GP Fund Loan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.gp.fund.loan</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_hr_gp_fund_loan"
            action="action_hr_gp_fund_loan"
            name="GP Fund Loan"
            parent="menu_hr_emp_benefits_deduction_main"
            sequence="120"/>
</odoo>