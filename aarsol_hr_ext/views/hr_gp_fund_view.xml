<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_hr_gp_fund_tree" model="ir.ui.view">
        <field name="name">hr.gp.fund.tree</field>
        <field name="model">hr.gp.fund</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Gp Fund">
                <field name="code"/>
                <field name="employee_id"/>
                <field name="designation_id"/>
                <field name="department_id"/>
                <field name="section_id"/>
                <field name="profit"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_gp_fund_form" model="ir.ui.view">
        <field name="name">hr.gp.fund.form</field>
        <field name="model">hr.gp.fund</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <form string="GP Fund">
                <header groups="base.group_user">
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="employee_id"/>
                            <field name="profit"/>
                        </group>
                        <group>
                            <field name="designation_id"/>
                            <field name="department_id"/>
                            <field name="section_id"/>
                        </group>
                        <group>
                            <field name="opening_balance"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Post">
                            <field name="gp_line_ids">
                                <tree editable="bottom">
                                    <field name="month"/>
                                    <field name="monthly_contribution" sum="Total Contribution"/>
                                    <field name="running_balance" sum="Total Running Balance"/>
                                    <field name="is_profit" readonly="1"/>
                                </tree>
                            </field>
                        </page>

                        <group>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_monthly_contribution"/>
                                <field name="profit_amount"/>
                                <field name="total_balance" class="oe_subtotal_footer_separator"/>
                            </group>
                        </group>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field groups="base.group_user" name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_hr_gp_fund_search" model="ir.ui.view">
        <field name="name">hr.gp.fund.search</field>
        <field name="model">hr.gp.fund</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <search string="Recruitment Register">
                <field name="employee_id"/>
                <newline/>
            </search>
        </field>
    </record>
    <record id="action_hr_gp_fund" model="ir.actions.act_window">
        <field name="name">GP Fund</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.gp.fund</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_hr_gp_fund_search"/>
    </record>

    <menuitem action="action_hr_gp_fund"
              id="menu_hr_gp_fund"
              name="GP Fund"
              parent="aarsol_hr_ext.menu_hr_emp_benefits_deduction_main"
              sequence="100"/>

    <record id="view_hr_fund_rule_tree" model="ir.ui.view">
        <field name="name">hr.fund.rule.tree</field>
        <field name="model">hr.fund.rule</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Gp Fund">
                <field name="fund_type"/>
                <field name="age_limit"/>
                <field name="installment"/>
                <field name="interest"/>
                <field name="max_amount"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_fund_rule_form" model="ir.ui.view">
        <field name="name">hr.fund.rule.form</field>
        <field name="model">hr.fund.rule</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <form string="Fund Rules">
                <header groups="base.group_user">
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="fund_type"/>
                            <field name="age_limit"/>
                            <field name="installment"/>
                        </group>
                        <group>
                            <field name="interest"/>
                            <field name="max_amount"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_fund_rule" model="ir.actions.act_window">
        <field name="name">Fund Rules</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.fund.rule</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem action="action_hr_fund_rule"
              id="menu_hr_fund_rule"
              name="Fund Rules"
              parent="hr_work_entry_contract_enterprise.menu_hr_payroll_configuration"
              sequence="110"/>
</odoo>