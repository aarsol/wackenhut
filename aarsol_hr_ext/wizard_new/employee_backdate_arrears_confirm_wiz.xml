<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_employee_backdate_arrears_confirm_wiz" model="ir.ui.view">
            <field name="name">employee.employee.backdate.arrears.confirm.wiz</field>
            <field name="model">employee.backdate.arrears.confirm.wiz</field>
            <field name="arch" type="xml">
                <form string="Employee BackDate Arrears Confirmation">
                    <group string="Back Date Arrears">
                        <field name="bb_arrears_ids" nolabel="1"/>
                    </group>
                    <footer>
                        <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_employee_backdate_arrears_confirm_wiz" model="ir.actions.act_window">
            <field name="name">Confirm Records</field>
            <field name="res_model">employee.backdate.arrears.confirm.wiz</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="domain">[('state','=','draft')]</field>
            <field name="binding_model_id" ref="aarsol_hr_ext.model_hr_employee_backdate_arrears"/>
            <field name="binding_view_types">list,form</field>
        </record>

    </data>
</odoo>
