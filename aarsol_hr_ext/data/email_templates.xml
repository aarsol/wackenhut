<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="email_template_payslip" model="mail.template">
            <field name="name">Payslip template</field>
            <field name="email_from">${(user.email or '')|safe}</field>
            <field name="subject">Paysilp for the month of ${object.date_from.strftime('%B/%Y')|safe}</field>
            <field name="email_to">${object.employee_id.email|safe}</field>
            <field name="lang">${object.lang}</field>
            <field name="model_id" ref="aarsol_hr_ext.model_hr_payslip"/>
            <field eval="True" name="auto_delete"/>
            <field name="report_template" ref="hr_payroll.action_report_payslip"/>
            <field name="report_name">Payslip</field>
            <field name="body_html">Please download the attachment.
            </field>
        </record>
    </data>
</odoo>