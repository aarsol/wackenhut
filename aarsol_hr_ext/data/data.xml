<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--  cron Job   -->
        <record id="hr_payslip_generate_cron" model="ir.cron">
            <field name="name">Payslip Generate Cron</field>
            <field name="model_id" ref="model_hr_payslip_cron"/>
            <field name="state">code</field>
            <field name="code">model.generate_slips()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
        </record>

        <record id="calculate_employee_age_cron" model="ir.cron">
            <field name="name">Employee Age Calculation Cron</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="state">code</field>
            <field name="code">model.calculate_age_cron()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
        </record>

        <record id="employee_family_members_age_cron" model="ir.cron">
            <field name="name">Employee Family Members Age Cron</field>
            <field name="model_id" ref="model_hr_employee_family"/>
            <field name="state">code</field>
            <field name="code">model.family_members_age_cron()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
        </record>


        <record forcecreate="True" id="ir_cron_employee_retirement" model="ir.cron">
            <field name="name">Employee Retirement: Cron</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="state">code</field>
            <field name="code">model.employee_retirement_cron()</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
        </record>


    </data>
</odoo>