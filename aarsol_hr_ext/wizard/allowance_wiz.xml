<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_hr_allowance_wiz" model="ir.ui.view">
            <field name="name">hr.allowance</field>
            <field name="model">hr.allowance</field>
            <field name="arch" type="xml">
                <form string="Allowances Details">
                    <group>
                        <field name="search_by"/>
                        <field name="designation_id" attrs="{'invisible':[('search_by','!=','designation')] ,'required': [('search_by', '=', 'designation')]}"/>
                        <field name="department_id" attrs="{'invisible':[('search_by','!=','department')] ,'required': [('search_by', '=', 'department')]}"/>
                        <field name="section_id" attrs="{'invisible':[('search_by','!=','section')] ,'required': [('search_by', '=', 'section')]}"/>
                        <field name="start_date"/>
                    </group>

                    <footer>
                        <button name="print_report" string="Generate Report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_allowance_wize" model="ir.actions.act_window">
            <field name="name">Allowances</field>
            <field name="res_model">hr.allowance</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
                action="action_allowance_wize"
                name="Allowances Report"
                id="menu_allowances_wize"
                parent="hr_payroll.menu_report_payroll"
                sequence="100"/>
    </data>
</odoo>
