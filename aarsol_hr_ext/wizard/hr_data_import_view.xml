<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_hr_data_import_wizard_form" model="ir.ui.view">
			<field name="name">hr.data.import.form.view</field>
			<field name="model">hr.data.import.wizard</field>
			<field name="arch" type="xml">
				<form string="Data Import">
                    <group>
                        <group>
                            <field name="file" filename="name"/>
                        </group>
                        <group>
                        </group>
                    </group>

				    <footer>
				        <button name="import_hostel_data" string="Import" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
				    </footer>
				</form>
			</field>
		</record>

         <record id="action_hr_data_import_wizard" model="ir.actions.act_window">
            <field name="name">Import HR Data</field>
            <field name="res_model">hr.data.import.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
                id="menu_hr_data_import_wizard"
                name="Import HR Data"
                action="action_hr_data_import_wizard"
                parent="hr.menu_human_resources_configuration"
                sequence="200"/>

    </data>
</odoo>