<odoo>
    <data>
        <record id="view_hr_inputs_wizard" model="ir.ui.view">
            <field name="name">view.hr.inputs.view</field>
            <field name="model">hr.inputs.wizard</field>
            <field name="arch" type="xml">
                <form string="Inputs Wizard">
                    <sheet>
                        <group>
                            <group>
                                <field name="input_rule" options="{'no_quick_create':True,'no_create_edit':True}"/>
                                <field name="input_code"/>
                                <field name="total_amount"/>
                                <field name="installments"/>
                            </group>
                            <group>
                                <field name="payscale_ids" widget="many2many_tags" options="{'no_quick_create':True,'no_create_edit':True}"/>
                                <field name="installment_amount"/>
                                <field name="start_date"/>
                            </group>
                        </group>
                        <group>
                            <field name="employee_ids" domain="[('payscale_id','in',payscale_ids)]">
                                <tree>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="payscale_id"/>
                                    <field name="category_id"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_create_entries" string="Create Record" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="act_hr_inputs_wizard" model="ir.actions.act_window">
            <field name="name">Inputs Entries</field>
            <field name="res_model">hr.inputs.wizard</field>
            <field name="binding_model_id" ref="model_hr_emp_salary_inputs"></field>
            <field name="view_mode">form</field>
            <field name="binding_view_types">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>