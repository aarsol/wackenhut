<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_hr_employee_data_rep_wizard" model="ir.ui.view">
            <field name="name">hr.employee.data.rep.wizard.view</field>
            <field name="model">employee.data.rep</field>
            <field name="arch" type="xml">
                <form string="Employee Data Report">
                    <p style="font-size:12px;font-weight:bold;">
                        This Report will fetch all the Current Employee in the System.
                    </p>
                    <group>
                    </group>

                    <footer>
                        <button name="make_excel" string="Generate Report" type="object" default_focus="1"
                                class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="act_cit_employee_data_rep_wizard" model="ir.actions.act_window">
            <field name="name">Employee Data Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.data.rep</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_hr_employee_data_rep_wizard"/>
            <field name="target">new</field>
        </record>

        <record id="view_employee_save_wizard_form" model="ir.ui.view">
            <field name="name">employee.data.save.wizard.form</field>
            <field name="model">employee.data.save.wizard</field>
            <field name="arch" type="xml">
                <form string="Employee Report">
                    <field name="name" invisible="1"/>
                    <div>
                        <h2>Report Generated</h2>
                        <p>Here is the Excel Sheet:
                            <field name="data" readonly="1" filename="name"/>
                        </p>
                    </div>
                    <footer>
                        <button string="Close" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <menuitem
                id="menu_employee_wiz"
                name="Employee Excel"
                action="act_cit_employee_data_rep_wizard"
                parent="hr.hr_menu_hr_reports"
                sequence="300"/>
    </data>
</odoo>
